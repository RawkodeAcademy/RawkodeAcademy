{
  "name": "workshop-automation",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "root": "projects/workshop-automation",
  "projectType": "application",
  "sourceRoot": "projects/workshop-automation/src",
  "targets": {
    "install": {
      "executor": "nx:run-commands",
      "options": {
        "command": "npm install",
        "cwd": "projects/workshop-automation"
      }
    },
    "preview": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pulumi preview",
        "cwd": "projects/workshop-automation"
      },
      "dependsOn": ["install"]
    },
    "up": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pulumi up --yes",
        "cwd": "projects/workshop-automation"
      },
      "dependsOn": ["install"]
    },
    "destroy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "pulumi destroy --yes",
        "cwd": "projects/workshop-automation"
      },
      "dependsOn": ["install"]
    },
    "lint": {
      "executor": "nx:run-commands",
      "options": {
        "command": "eslint . --ext .ts",
        "cwd": "projects/workshop-automation"
      }
    }
  }
}
