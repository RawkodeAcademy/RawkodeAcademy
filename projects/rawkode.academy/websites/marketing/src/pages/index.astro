---
import BaseLayout from '../layouts/BaseLayout.astro';
import PageHero from '../components/common/PageHero.vue';
import Button from '../components/common/Button.vue';
import Card from '../components/common/Card.vue';
---

<BaseLayout title="Rawkode Academy - Developer Brand Partnerships & Training">
	<PageHero
		title="Your Platform for Developer Content"
		subtitle="Publish courses, articles, and videos on our platform. Get consulting hours to help you create content that resonates. Reach a community of cloud-native developers."
		client:load
	>
		<div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
			<Button href="/partnerships" variant="primary" size="lg" client:load>
				Explore Partnerships
			</Button>
			<Button href="/contact" variant="outline" size="lg" client:load>
				Get in Touch
			</Button>
		</div>
	</PageHero>

	<!-- Value Proposition -->
	<section class="py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Why Partner with Rawkode Academy?</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					Get platform access to publish your own content, plus consulting hours to help you create content developers actually want.
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-3">
				<Card title="Platform Access" client:load>
					<p class="text-neutral-400">
						Publish articles, courses, videos, and learning paths directly to our engaged developer community.
					</p>
				</Card>

				<Card title="Expert Consulting" client:load>
					<p class="text-neutral-400">
						Get guidance on content strategy, technical reviews, and what actually resonates with developers.
					</p>
				</Card>

				<Card title="Flexible Tiers" client:load>
					<p class="text-neutral-400">
						Choose from Nip, Dram, Blend, or Malt tiers with increasing consulting hours and features.
					</p>
				</Card>
			</div>
		</div>
	</section>

	<!-- Current Partners -->
	<section class="border-y border-neutral-800 bg-neutral-900 py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Trusted by Industry Leaders</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					Join companies who are already investing in developer education and brand awareness.
				</p>
			</div>

			<div class="grid grid-cols-2 gap-8 md:grid-cols-5">
				{['Heroku', 'Spectro Cloud', 'WunderGraph', 'Zitadel', 'Guidepad'].map((partner) => (
					<div class="flex items-center justify-center rounded-lg border border-neutral-800 bg-neutral-950 p-8">
						<span class="text-lg font-semibold text-neutral-400">{partner}</span>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Services Overview -->
	<section class="py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">How We Can Help</h2>
			</div>

			<div class="grid gap-8 md:grid-cols-3">
				<Card variant="featured" client:load>
					<div class="mb-4 text-4xl">ü§ù</div>
					<h3 class="mb-3 text-xl font-semibold">Partnerships</h3>
					<p class="mb-4 text-neutral-400">
						Platform access to publish your content, plus consulting hours from $10,000/year to $100,000/year.
					</p>
					<Button href="/partnerships" variant="outline" client:load>
						Learn More
					</Button>
				</Card>

				<Card client:load>
					<div class="mb-4 text-4xl">üìö</div>
					<h3 class="mb-3 text-xl font-semibold">Training</h3>
					<p class="mb-4 text-neutral-400">
						Expert-led training on Kubernetes, IaC, Cloud Engineering, and Platform Engineering.
					</p>
					<Button href="/training" variant="outline" client:load>
						View Programmes
					</Button>
				</Card>

				<Card client:load>
					<div class="mb-4 text-4xl">üíº</div>
					<h3 class="mb-3 text-xl font-semibold">Consulting</h3>
					<p class="mb-4 text-neutral-400">
						DX optimization, cloud-native architecture, and platform engineering consulting.
					</p>
					<Button href="/consulting" variant="outline" client:load>
						Get Started
					</Button>
				</Card>
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="bg-gradient-to-br from-blue-950 to-purple-950 py-20">
		<div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
			<h2 class="mb-6 text-4xl font-bold">Ready to Get Started?</h2>
			<p class="mb-8 text-lg text-neutral-300">
				Get platform access to publish your content and consulting hours to help you create content developers love.
			</p>
			<div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
				<Button href="/contact" variant="primary" size="lg" client:load>
					Schedule a Call
				</Button>
				<Button href="/partnerships" variant="outline" size="lg" client:load>
					View Partnership Tiers
				</Button>
			</div>
		</div>
	</section>
</BaseLayout>
