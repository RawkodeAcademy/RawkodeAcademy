---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/common/PageHero.vue';
import Card from '../../components/common/Card.vue';
---

<BaseLayout title="Contact Us - Rawkode Academy" description="Get in touch with Rawkode Academy for partnerships, training, consulting, or general enquiries.">
	<PageHero
		eyebrow="Contact"
		title="Let's Talk"
		subtitle="Whether you're interested in partnerships, training, consulting, or just want to say hello we'd love to hear from you."
		client:load
	/>

	<section class="py-20">
		<div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
			<div class="grid gap-12 lg:grid-cols-2">
				<!-- Contact Form -->
				<div>
					<h2 class="mb-6 text-2xl font-bold">Send us a message</h2>
					<form class="space-y-6" action="https://formspree.io/f/YOUR_FORM_ID" method="POST">
						<div>
							<label for="name" class="mb-2 block text-sm font-medium">Name</label>
							<input
								type="text"
								id="name"
								name="name"
								required
								class="w-full rounded-md border border-neutral-700 bg-neutral-900 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
							/>
						</div>

						<div>
							<label for="email" class="mb-2 block text-sm font-medium">Email</label>
							<input
								type="email"
								id="email"
								name="email"
								required
								class="w-full rounded-md border border-neutral-700 bg-neutral-900 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
							/>
						</div>

						<div>
							<label for="company" class="mb-2 block text-sm font-medium">Company (Optional)</label>
							<input
								type="text"
								id="company"
								name="company"
								class="w-full rounded-md border border-neutral-700 bg-neutral-900 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
							/>
						</div>

						<div>
							<label for="interest" class="mb-2 block text-sm font-medium">I'm interested in</label>
							<select
								id="interest"
								name="interest"
								required
								class="w-full rounded-md border border-neutral-700 bg-neutral-900 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
							>
								<option value="">Select an option</option>
								<option value="partnership">Partnership</option>
								<option value="training">Training</option>
								<option value="consulting">Consulting</option>
								<option value="other">Other</option>
							</select>
						</div>

						<div>
							<label for="message" class="mb-2 block text-sm font-medium">Message</label>
							<textarea
								id="message"
								name="message"
								rows="5"
								required
								class="w-full rounded-md border border-neutral-700 bg-neutral-900 px-4 py-2 focus:border-blue-500 focus:outline-none focus:ring-2 focus:ring-blue-500"
							></textarea>
						</div>

						<button
							type="submit"
							class="w-full rounded-md bg-blue-600 px-6 py-3 font-medium text-white transition-colors hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 focus:ring-offset-2 focus:ring-offset-neutral-950"
						>
							Send Message
						</button>
					</form>
				</div>

				<!-- Contact Info -->
				<div class="space-y-8">
					<div>
						<h2 class="mb-6 text-2xl font-bold">Other ways to connect</h2>
						<div class="space-y-6">
							<Card client:load>
								<div class="flex items-start gap-4">
									<div class="text-3xl">üìß</div>
									<div>
										<h3 class="mb-1 font-semibold">Email</h3>
										<a href="mailto:hello@rawkode.academy" class="text-blue-400 hover:underline">
											hello@rawkode.academy
										</a>
									</div>
								</div>
							</Card>

							<Card client:load>
								<div class="flex items-start gap-4">
									<div class="text-3xl">üí¨</div>
									<div>
										<h3 class="mb-1 font-semibold">Community Chat</h3>
										<p class="text-sm text-neutral-400">
											Join our Zulip community for discussions and support
										</p>
									</div>
								</div>
							</Card>

							<Card client:load>
								<div class="flex items-start gap-4">
									<div class="text-3xl">üê¶</div>
									<div>
										<h3 class="mb-1 font-semibold">Social Media</h3>
										<div class="space-x-4 text-sm">
											<a href="https://twitter.com/rawkode" class="text-blue-400 hover:underline">Twitter</a>
											<a href="https://github.com/rawkode" class="text-blue-400 hover:underline">GitHub</a>
											<a href="https://youtube.com/@rawkode" class="text-blue-400 hover:underline">YouTube</a>
										</div>
									</div>
								</div>
							</Card>
						</div>
					</div>

					<div>
						<h3 class="mb-4 text-xl font-semibold">Quick Links</h3>
						<ul class="space-y-2 text-neutral-400">
							<li>
								<a href="/partnerships" class="hover:text-neutral-50">Partnership Tiers ‚Üí</a>
							</li>
							<li>
								<a href="/training" class="hover:text-neutral-50">Training Programmes ‚Üí</a>
							</li>
							<li>
								<a href="/consulting" class="hover:text-neutral-50">Consulting Services ‚Üí</a>
							</li>
							<li>
								<a href="https://app.rawkode.academy" class="hover:text-neutral-50">Learning Platform ‚Üí</a>
							</li>
						</ul>
					</div>
				</div>
			</div>
		</div>
	</section>

	<!-- FAQ -->
	<section class="border-t border-neutral-800 bg-neutral-900 py-20">
		<div class="mx-auto max-w-3xl px-4 sm:px-6 lg:px-8">
			<h2 class="mb-12 text-center text-3xl font-bold">Frequently Asked Questions</h2>

			<div class="space-y-6">
				<details class="group rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<summary class="cursor-pointer font-semibold">What's the typical response time?</summary>
					<p class="mt-4 text-neutral-400">
						We aim to respond to all enquiries within 24-48 hours during business days.
					</p>
				</details>

				<details class="group rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<summary class="cursor-pointer font-semibold">Do you offer custom packages?</summary>
					<p class="mt-4 text-neutral-400">
						Absolutely! While we have standard tiers for partnerships, training, and consulting, we're happy to create custom packages
						tailored to your specific needs.
					</p>
				</details>

				<details class="group rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<summary class="cursor-pointer font-semibold">Can we schedule a call before committing?</summary>
					<p class="mt-4 text-neutral-400">
						Yes! We offer free consultation calls to discuss your needs and determine if we're a good fit for each other.
					</p>
				</details>

				<details class="group rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<summary class="cursor-pointer font-semibold">Do you work with international clients?</summary>
					<p class="mt-4 text-neutral-400">
						Yes, we work with clients worldwide. For training and consulting, we can accommodate different time zones and offer
						both on-site and virtual delivery options.
					</p>
				</details>
			</div>
		</div>
	</section>
</BaseLayout>
