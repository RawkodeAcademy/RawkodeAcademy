---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/common/PageHero.vue';
import Button from '../../components/common/Button.vue';
import Card from '../../components/common/Card.vue';

const services = [
	{
		title: 'Developer Experience Optimization',
		description: 'Audit and improve your developer workflows, tooling, and documentation to boost productivity and satisfaction.',
		icon: '‚ö°',
	},
	{
		title: 'Cloud-Native Architecture',
		description: 'Design scalable, resilient cloud-native systems using Kubernetes, service mesh, and modern patterns.',
		icon: '‚òÅÔ∏è',
	},
	{
		title: 'Platform Engineering',
		description: 'Build internal developer platforms that enable self-service and reduce cognitive load for your teams.',
		icon: 'üèóÔ∏è',
	},
	{
		title: 'Team Development',
		description: 'Embedded coaching and mentorship to level up your engineering team\'s cloud-native capabilities.',
		icon: 'üë•',
	},
];

const retainerTiers = [
	{
		name: 'Level 1',
		price: '$6,000',
		priceLabel: '/year',
		description: 'Expert guidance when you need it',
		commitment: '16 hours per year',
		features: [
			'16 hours of consulting per year',
			'Use for architecture reviews, planning sessions, or workshops',
			'Break into 2-4 hour blocks as needed',
			'Direct Slack access for async questions',
			'Email support',
			'Flexible scheduling',
		],
		featured: false,
	},
	{
		name: 'Level 2',
		price: '$9,000',
		priceLabel: '/year',
		description: 'Strategic cloud native advisor',
		commitment: '32 hours per year',
		features: [
			'32 hours of consulting per year',
			'Quarterly strategic reviews and planning',
			'Architecture design and validation',
			'Platform engineering guidance',
			'Team workshops and coaching',
			'Priority Slack access',
			'Priority scheduling',
			'Flexible hour allocation',
		],
		featured: true,
	},
	{
		name: 'Level 3',
		price: '$18,000',
		priceLabel: '/year',
		description: 'Ongoing cloud native partnership',
		commitment: '96 hours per year',
		features: [
			'96 hours of consulting per year',
			'Monthly or bi-monthly strategic sessions',
			'Hands-on implementation support',
			'Architecture design and code reviews',
			'Platform engineering and team coaching',
			'On-call Slack access for urgent guidance',
			'Priority support with rapid response',
			'Quarterly business reviews',
			'Maximum flexibility in hour usage',
		],
		featured: false,
	},
];
---

<BaseLayout title="Cloud Native Consulting Retainers - Rawkode Academy" description="Get expert cloud-native guidance on annual retainer. From $6k/year for strategic reviews to $18k/year for ongoing partnership. Direct Slack access included.">
	<PageHero
		eyebrow="Consulting Retainers"
		title="Your Cloud Native Advisor On Retainer"
		subtitle="Stop paying $3k+/day for ad-hoc consulting. Lock in annual access to expert guidance at a fraction of the cost. Architecture reviews, strategic planning, implementation support‚Äîplus direct Slack access for async questions."
		client:load
	>
		<Button href="/contact" variant="primary" size="lg" client:load>
			Get Started from $6k/year
		</Button>
	</PageHero>

	<!-- Services -->
	<section class="py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Our Services</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					Practical, hands-on consulting that solves real problems and delivers measurable results.
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-2">
				{
					services.map((service) => (
						<Card client:load>
							<div class="mb-4 text-5xl">{service.icon}</div>
							<h3 class="mb-3 text-xl font-semibold">{service.title}</h3>
							<p class="text-neutral-400">{service.description}</p>
						</Card>
					))
				}
			</div>
		</div>
	</section>

	<!-- Why Retainer -->
	<section class="border-y border-neutral-800 bg-neutral-900 py-20">
		<div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-6 text-3xl font-bold">Stop Paying $3k+/Day for Ad-Hoc Consulting</h2>
				<p class="mx-auto mb-8 max-w-3xl text-lg leading-relaxed text-neutral-300">
					Traditional consulting is expensive, slow, and reactive. Annual retainers give you guaranteed access to expert guidance at locked-in rates‚Äîno SOWs, no procurement delays, just schedule time when you need it.
				</p>
			</div>
			<div class="grid gap-8 md:grid-cols-3">
				<div class="rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<div class="mb-4 text-4xl">üí∞</div>
					<h3 class="mb-3 text-xl font-semibold">Massive Savings</h3>
					<p class="text-neutral-400">$6k/year for 16 hours = $375/hour. $18k/year for 96 hours = $188/hour. Compare that to $300-500/hour for traditional consulting.</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<div class="mb-4 text-4xl">‚ö°</div>
					<h3 class="mb-3 text-xl font-semibold">Instant Access</h3>
					<p class="text-neutral-400">No sales calls. No SOWs. No procurement delays. Post in Slack, book time, get answers. That's it.</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<div class="mb-4 text-4xl">üéØ</div>
					<h3 class="mb-3 text-xl font-semibold">Context Over Time</h3>
					<p class="text-neutral-400">I learn your systems, your team, your challenges. Every conversation builds on the last‚Äîno ramping up consultants every time.</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<div class="mb-4 text-4xl">üîÑ</div>
					<h3 class="mb-3 text-xl font-semibold">Hours Roll Over</h3>
					<p class="text-neutral-400">Quiet month? No problem. Your unused hours carry forward. Use them when you need them most‚Äîmigrations, incidents, or big decisions.</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<div class="mb-4 text-4xl">üí¨</div>
					<h3 class="mb-3 text-xl font-semibold">Always Available</h3>
					<p class="text-neutral-400">Direct Slack access for quick questions. Not every problem needs a 1-hour call‚Äîsometimes you just need a sanity check or pointer in the right direction.</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-950 p-6">
					<div class="mb-4 text-4xl">üöÄ</div>
					<h3 class="mb-3 text-xl font-semibold">Battle-Tested Experience</h3>
					<p class="text-neutral-400">Not theory from a slide deck. Real experience building and operating cloud-native systems at scale. I've made the mistakes so you don't have to.</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Comparison -->
	<section class="py-20">
		<div class="mx-auto max-w-5xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Retainer vs. Traditional Consulting</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					See how much you save‚Äîand how much faster you move
				</p>
			</div>

			<div class="overflow-hidden rounded-lg border border-neutral-800">
				<table class="w-full">
					<thead>
						<tr class="border-b border-neutral-800 bg-neutral-900">
							<th class="p-4 text-left font-semibold"></th>
							<th class="p-4 text-left font-semibold text-blue-400">Rawkode Academy Retainer</th>
							<th class="p-4 text-left font-semibold text-neutral-500">Traditional Consulting</th>
						</tr>
					</thead>
					<tbody class="divide-y divide-neutral-800">
						<tr class="bg-neutral-950">
							<td class="p-4 font-medium">Cost per hour</td>
							<td class="p-4 text-green-400">$188-375/hour</td>
							<td class="p-4 text-neutral-400">$300-500/hour</td>
						</tr>
						<tr class="bg-neutral-950">
							<td class="p-4 font-medium">Time to get started</td>
							<td class="p-4 text-green-400">Instant (just schedule)</td>
							<td class="p-4 text-neutral-400">Weeks (SOW, contracts, procurement)</td>
						</tr>
						<tr class="bg-neutral-950">
							<td class="p-4 font-medium">Minimum engagement</td>
							<td class="p-4 text-green-400">$6k/year (16 hours)</td>
							<td class="p-4 text-neutral-400">$25k-100k+ (project minimums)</td>
						</tr>
						<tr class="bg-neutral-950">
							<td class="p-4 font-medium">Context retention</td>
							<td class="p-4 text-green-400">Year-round (learns your systems)</td>
							<td class="p-4 text-neutral-400">Starts from zero every time</td>
						</tr>
						<tr class="bg-neutral-950">
							<td class="p-4 font-medium">Async support</td>
							<td class="p-4 text-green-400">‚úì Direct Slack access</td>
							<td class="p-4 text-neutral-400">‚úó Billable hours only</td>
						</tr>
						<tr class="bg-neutral-950">
							<td class="p-4 font-medium">Hour allocation</td>
							<td class="p-4 text-green-400">‚úì Use whenever you need</td>
							<td class="p-4 text-neutral-400">‚úó Fixed project schedule</td>
						</tr>
						<tr class="bg-neutral-950">
							<td class="p-4 font-medium">Commitment</td>
							<td class="p-4 text-green-400">Annual (cancel after 1 year)</td>
							<td class="p-4 text-neutral-400">Project-locked (can't cancel mid-project)</td>
						</tr>
					</tbody>
				</table>
			</div>
		</div>
	</section>

	<!-- Retainer Tiers -->
	<section class="border-y border-neutral-800 bg-neutral-900 py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Simple Annual Retainers</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					Lock in your consulting days at guaranteed rates. No surprise invoices. No hourly billing. Schedule time when you need it.
				</p>
			</div>

			<div class="mx-auto grid max-w-7xl gap-8 lg:grid-cols-3">
				{
					retainerTiers.map((tier) => (
						<div
							class:list={[
								'flex flex-col rounded-lg border p-8',
								tier.featured
									? 'border-blue-600 bg-gradient-to-br from-blue-950 to-neutral-950 shadow-lg shadow-blue-900/20'
									: 'border-neutral-800 bg-neutral-950',
							]}
						>
							{tier.featured && (
								<div class="mb-4 inline-block self-start rounded-full bg-blue-600 px-3 py-1 text-xs font-semibold">
									Most Popular
								</div>
							)}
							<h3 class="mb-2 text-2xl font-bold">{tier.name}</h3>
							<div class="mb-3">
								<span class="text-3xl font-bold">{tier.price}</span>
								<span class="text-neutral-400">{tier.priceLabel}</span>
							</div>
							<p class="mb-3 text-lg font-semibold text-blue-400">{tier.commitment}</p>
							<p class="mb-6 text-neutral-400">{tier.description}</p>
							<ul class="mb-8 flex-grow space-y-3">
								{tier.features.map((feature) => (
									<li class="flex items-start">
										<svg
											class="mr-2 mt-1 h-5 w-5 flex-shrink-0 text-green-500"
											fill="none"
											stroke="currentColor"
											viewBox="0 0 24 24"
										>
											<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7" />
										</svg>
										<span class="text-sm">{feature}</span>
									</li>
								))}
							</ul>
							<Button variant={tier.featured ? 'primary' : 'outline'} size="lg" href="/contact" client:load>
								Get Started
							</Button>
						</div>
					))
				}
			</div>
		</div>
	</section>

	<!-- Approach -->
	<section class="py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Our Approach</h2>
			</div>

			<div class="grid gap-8 md:grid-cols-4">
				<div>
					<h3 class="mb-4 text-xl font-semibold">Discovery</h3>
					<p class="text-neutral-400">
						Deep dive into your current state, challenges, and goals through interviews and technical review.
					</p>
				</div>
				<div>
					<h3 class="mb-4 text-xl font-semibold">Planning</h3>
					<p class="text-neutral-400">
						Collaborative roadmap development with clear milestones, priorities, and success metrics.
					</p>
				</div>
				<div>
					<h3 class="mb-4 text-xl font-semibold">Execution</h3>
					<p class="text-neutral-400">
						Hands-on implementation working alongside your team, building capabilities while delivering value.
					</p>
				</div>
				<div>
					<h3 class="mb-4 text-xl font-semibold">Transition</h3>
					<p class="text-neutral-400">
						Knowledge transfer, documentation, and support to ensure your team can sustain improvements.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="bg-gradient-to-br from-blue-950 to-purple-950 py-20">
		<div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
			<h2 class="mb-6 text-4xl font-bold">Lock In Expert Cloud Native Guidance</h2>
			<p class="mb-8 text-lg text-neutral-300">
				Stop paying $3k+/day for ad-hoc consulting. Lock in annual retainer pricing from $6k/year and get guaranteed access to expert guidance when you need it. Direct Slack access included.
			</p>
			<div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
				<Button href="/contact" variant="primary" size="lg" client:load>
					Start a Retainer
				</Button>
				<Button href="/contact" variant="outline" size="lg" client:load>
					Ask a Question
				</Button>
			</div>
		</div>
	</section>
</BaseLayout>
