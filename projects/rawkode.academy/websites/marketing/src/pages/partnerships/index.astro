---
import BaseLayout from '../../layouts/BaseLayout.astro';
import PageHero from '../../components/common/PageHero.vue';
import Button from '../../components/common/Button.vue';
import PricingCard from '../../components/partnership/PricingCard.vue';

const pricingTiers = [
	{
		tier: 'Nip',
		price: '$10,000',
		description: 'Get started with basic partner visibility and brand presence.',
		features: [
			'Logo on partner page',
			'Newsletter mentions',
			'Partner listing in directory',
		],
	},
	{
		tier: 'Dram',
		price: '$20,000',
		description: 'Expand your reach with content publishing and analytics.',
		features: [
			'Content publishing access',
			'Partner dashboard access',
			'Analytics and reporting',
			'Featured partner placement',
			'Quarterly strategy consultation',
		],
	},
	{
		tier: 'Blend',
		price: '$50,000',
		description: 'Deep partnership with consulting and series sponsorship.',
		features: [
			'Content publishing access',
			'5 hours/month consulting',
			'Series sponsorship opportunities',
			'Co-craft mini courses with David',
			'Priority content review',
			'Monthly analytics reports',
			'Community event co-hosting',
		],
		featured: true,
	},
	{
		tier: 'Malt',
		price: '$100,000',
		description: 'Premium partnership with dedicated support and maximum exposure.',
		features: [
			'Content publishing access',
			'15 hours/month consulting',
			'Dedicated account manager',
			'Multiple series sponsorships',
			'Real-time analytics dashboard',
			'Joint webinars and events',
			'Co-marketing campaigns',
			'Custom landing pages',
		],
	},
];

const publishingLimits = [
	{ tier: 'Nip', articles: '0', videos: '0', courses: '0' },
	{ tier: 'Dram', articles: '1/month', videos: '1/month', courses: '0' },
	{ tier: 'Blend', articles: '2/month', videos: '2/month', courses: '1/year' },
	{ tier: 'Malt', articles: '4/month', videos: '4/month', courses: '2/year' },
];
---

<BaseLayout title="Partnership Programme - Rawkode Academy" description="Join leading developer tool companies in partnering with Rawkode Academy. Reach thousands of cloud-native developers through authentic content.">
	<PageHero
		eyebrow="Partnerships"
		title="Your Platform for Developer Content"
		subtitle="Get access to our platform to publish courses, articles, and videos. Plus consulting hours to help you create content that resonates with cloud-native developers."
		client:load
	>
		<div class="flex flex-col items-center justify-center gap-4 sm:flex-row">
			<Button href="/contact" variant="primary" size="lg" client:load>
				Start Your Partnership
			</Button>
			<Button href="#tiers" variant="outline" size="lg" client:load>
				View Pricing
			</Button>
		</div>
	</PageHero>

	<!-- Mission Statement -->
	<section class="border-y border-neutral-800 bg-gradient-to-br from-blue-950/30 to-purple-950/30 py-16">
		<div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
			<h2 class="mb-6 text-3xl font-bold">Supporting Free Education</h2>
			<p class="mb-4 text-lg leading-relaxed text-neutral-300">
				Your partnership enables us to keep <strong>all learning content free</strong> for developers worldwide. When you partner with Rawkode Academy, you're not just reaching an audienceâ€”you're directly supporting the cloud-native developer community and helping democratize access to quality technical education.
			</p>
			<p class="text-base text-neutral-400">
				Every partnership helps us create more authentic, hands-on content that developers can access without barriers. Together, we're building a better learning ecosystem for the cloud-native community.
			</p>
		</div>
	</section>

	<!-- Why Partner Section -->
	<section class="py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">What Partners Get</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					Platform access to publish your content, consulting support, and opportunities to sponsor content series.
				</p>
			</div>

			<div class="grid gap-8 md:grid-cols-2 lg:grid-cols-4">
				<div class="rounded-lg border border-neutral-800 bg-neutral-900 p-6">
					<div class="mb-4 text-4xl">ðŸš€</div>
					<h3 class="mb-2 text-lg font-semibold">Self-Service Publishing</h3>
					<p class="text-sm text-neutral-400">You create and publish your own articles, courses, and videos directly on our platform</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-900 p-6">
					<div class="mb-4 text-4xl">ðŸ’¡</div>
					<h3 class="mb-2 text-lg font-semibold">Consulting Hours</h3>
					<p class="text-sm text-neutral-400">Work with David to create compelling content strategy and execution</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-900 p-6">
					<div class="mb-4 text-4xl">ðŸŽ¬</div>
					<h3 class="mb-2 text-lg font-semibold">Series Sponsorship</h3>
					<p class="text-sm text-neutral-400">Co-craft mini courses and content series with David for maximum impact</p>
				</div>
				<div class="rounded-lg border border-neutral-800 bg-neutral-900 p-6">
					<div class="mb-4 text-4xl">ðŸ“Š</div>
					<h3 class="mb-2 text-lg font-semibold">Analytics & Dashboard</h3>
					<p class="text-sm text-neutral-400">Track performance, engagement, and reach of your published content (Dram+)</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Pricing Tiers -->
	<section id="tiers" class="border-y border-neutral-800 bg-neutral-950 py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Partnership Tiers</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					Choose the tier that fits your goals. Higher tiers include more consulting hours and premium features.
				</p>
			</div>

			<div class="grid gap-8 lg:grid-cols-4">
				{
					pricingTiers.map((tier) => (
						<PricingCard
							tier={tier.tier}
							price={tier.price}
							description={tier.description}
							features={tier.features}
							featured={tier.featured}
							client:load
						/>
					))
				}
			</div>

			<div class="mt-12 text-center">
				<p class="text-neutral-400">Need a custom package? <a href="/contact" class="text-blue-400 hover:underline">Let's talk</a></p>
			</div>
		</div>
	</section>

	<!-- Publishing Limits -->
	<section class="bg-neutral-900 py-20">
		<div class="mx-auto max-w-6xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">Content Publishing Limits</h2>
				<p class="mx-auto max-w-2xl text-lg text-neutral-400">
					Each tier has specific publishing limits to ensure quality and focused content creation.
				</p>
			</div>

			<div class="overflow-x-auto">
				<table class="w-full border-collapse">
					<thead>
						<tr class="border-b border-neutral-700">
							<th class="px-6 py-4 text-left text-sm font-semibold">Tier</th>
							<th class="px-6 py-4 text-left text-sm font-semibold">Articles & Tutorials</th>
							<th class="px-6 py-4 text-left text-sm font-semibold">Videos</th>
							<th class="px-6 py-4 text-left text-sm font-semibold">Courses</th>
						</tr>
					</thead>
					<tbody>
						{
							publishingLimits.map((limit, index) => (
								<tr class:list={['border-b border-neutral-800', index === 2 ? 'bg-blue-950/20' : '']}>
									<td class="px-6 py-4">
										<span class="font-semibold">{limit.tier}</span>
										{index === 2 && <span class="ml-2 rounded bg-blue-600 px-2 py-0.5 text-xs">Most Popular</span>}
									</td>
									<td class="px-6 py-4 text-neutral-300">{limit.articles}</td>
									<td class="px-6 py-4 text-neutral-300">{limit.videos}</td>
									<td class="px-6 py-4 text-neutral-300">{limit.courses}</td>
								</tr>
							))
						}
					</tbody>
				</table>
			</div>

			<div class="mt-8 text-center text-sm text-neutral-400">
				<p>* All content is self-published by partners. Article and video limits reset monthly. Course limits are annual.</p>
			</div>
		</div>
	</section>

	<!-- What You Get -->
	<section class="py-20">
		<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
			<div class="mb-12 text-center">
				<h2 class="mb-4 text-3xl font-bold">How It Works</h2>
			</div>

			<div class="grid gap-8 md:grid-cols-3">
				<div>
					<h3 class="mb-4 text-xl font-semibold">1. You Create & Publish</h3>
					<p class="text-neutral-400">
						You write articles, build courses, and upload your own videos to our platform. Self-service publishing - we don't create content for you.
					</p>
				</div>
				<div>
					<h3 class="mb-4 text-xl font-semibold">2. We Consult & Collaborate</h3>
					<p class="text-neutral-400">
						Use consulting hours for content strategy, technical reviews, and co-creating mini course series to maximize impact.
					</p>
				</div>
				<div>
					<h3 class="mb-4 text-xl font-semibold">3. Reach Developers</h3>
					<p class="text-neutral-400">
						Your content reaches cloud-native developers who value authentic learning. Higher tiers get analytics to track performance.
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- CTA -->
	<section class="bg-gradient-to-br from-blue-950 to-purple-950 py-20">
		<div class="mx-auto max-w-4xl px-4 text-center sm:px-6 lg:px-8">
			<h2 class="mb-6 text-4xl font-bold">Ready to Partner?</h2>
			<p class="mb-8 text-lg text-neutral-300">
				Join Heroku, Spectro Cloud, WunderGraph, Zitadel, and other companies using our platform to reach developers with authentic content.
			</p>
			<Button href="/contact" variant="primary" size="lg" client:load>
				Schedule a Partnership Call
			</Button>
		</div>
	</section>
</BaseLayout>
