---
import '../styles/global.css';

interface Props {
	title: string;
	description?: string;
}

const { title, description = 'Rawkode Academy - Partnership, Training & Consulting' } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<meta name="description" content={description} />
		<meta name="generator" content={Astro.generator} />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="min-h-screen bg-neutral-950 text-neutral-50 antialiased">
		<header class="border-b border-neutral-800">
			<nav class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="flex h-16 items-center justify-between">
					<div class="flex items-center">
						<a href="/" class="text-xl font-bold">Rawkode Academy</a>
					</div>
					<div class="hidden md:block">
						<div class="ml-10 flex items-baseline space-x-4">
							<a href="/partnerships" class="rounded-md px-3 py-2 text-sm font-medium hover:bg-neutral-800">Partnerships</a>
							<a href="/training" class="rounded-md px-3 py-2 text-sm font-medium hover:bg-neutral-800">Training</a>
							<a href="/consulting" class="rounded-md px-3 py-2 text-sm font-medium hover:bg-neutral-800">Consulting</a>
							<a href="/about" class="rounded-md px-3 py-2 text-sm font-medium hover:bg-neutral-800">About</a>
							<a href="/contact" class="rounded-md bg-blue-600 px-3 py-2 text-sm font-medium hover:bg-blue-700">Contact</a>
						</div>
					</div>
				</div>
			</nav>
		</header>

		<!-- Banner for learning platform -->
		<div class="bg-gradient-to-r from-blue-600 to-purple-600 py-3 text-center text-sm">
			<p>
				Want to learn? Visit our learning platform at
				<a href="https://app.rawkode.academy" class="font-semibold underline hover:no-underline">app.rawkode.academy</a>
			</p>
		</div>

		<main>
			<slot />
		</main>

		<footer class="border-t border-neutral-800 bg-neutral-950 py-12">
			<div class="mx-auto max-w-7xl px-4 sm:px-6 lg:px-8">
				<div class="grid grid-cols-1 gap-8 md:grid-cols-4">
					<div>
						<h3 class="mb-4 text-lg font-semibold">Rawkode Academy</h3>
						<p class="text-sm text-neutral-400">
							Empowering developers through authentic, hands-on education and strategic partnerships.
						</p>
					</div>
					<div>
						<h4 class="mb-4 text-sm font-semibold">Services</h4>
						<ul class="space-y-2 text-sm text-neutral-400">
							<li><a href="/partnerships" class="hover:text-neutral-50">Partnerships</a></li>
							<li><a href="/training" class="hover:text-neutral-50">Training</a></li>
							<li><a href="/consulting" class="hover:text-neutral-50">Consulting</a></li>
						</ul>
					</div>
					<div>
						<h4 class="mb-4 text-sm font-semibold">Company</h4>
						<ul class="space-y-2 text-sm text-neutral-400">
							<li><a href="/about" class="hover:text-neutral-50">About</a></li>
							<li><a href="/contact" class="hover:text-neutral-50">Contact</a></li>
							<li><a href="https://app.rawkode.academy" class="hover:text-neutral-50">Learning Platform</a></li>
						</ul>
					</div>
					<div>
						<h4 class="mb-4 text-sm font-semibold">Connect</h4>
						<ul class="space-y-2 text-sm text-neutral-400">
							<li><a href="https://github.com/rawkode" class="hover:text-neutral-50">GitHub</a></li>
							<li><a href="https://twitter.com/rawkode" class="hover:text-neutral-50">Twitter</a></li>
							<li><a href="https://youtube.com/@rawkode" class="hover:text-neutral-50">YouTube</a></li>
						</ul>
					</div>
				</div>
				<div class="mt-8 border-t border-neutral-800 pt-8 text-center text-sm text-neutral-400">
					<p>&copy; {new Date().getFullYear()} Rawkode Academy. All rights reserved.</p>
				</div>
			</div>
		</footer>
	</body>
</html>
