---
import DefaultHead from "../components/html/head.astro";
import DefaultLayout from "../layouts/app.astro";

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<html lang="en" class="h-full bg-gray-800">
	<DefaultHead title={title}>
		<slot name="extra-head" slot="extra-head" />
	</DefaultHead>

	<body class="h-full">
		<slot name="layout">
			<DefaultLayout>
				<slot />
			</DefaultLayout>
		</slot>
	</body>

	<script>
		import "flowbite";
	</script>
</html>
