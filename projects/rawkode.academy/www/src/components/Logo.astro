---
import { Image } from "@astrojs/image/components";
import config from "@config/config.json";
const { src } = Astro.props;
const {
  logo,
  logo_width,
  logo_height,
  logo_text,
  title,
}: {
  logo: string;
  logo_width: any;
  logo_height: any;
  logo_text: string;
  title: string;
} = config.site;
---

<a href="/" class="navbar-brand block">
  {
    src || logo ? (
      <Image
        width={logo_width.replace("px", "") * 2}
        height={logo_height.replace("px", "") * 2}
        src={src ? src : logo}
        alt={title}
        class="w-auto object-center object-contain h-7 md:h-[36px] md:w-[257px]"
      />
    ) : logo_text ? (
      logo_text
    ) : (
      title
    )
  }
</a>
