---
import BaseLayout from "./page.astro";
const { frontmatter } = Astro.props;
---

<style>
  .mdx-page {
    @apply grid place-items-center px-16 md:px-32 lg:px-64;
  }
</style>

<BaseLayout title={frontmatter.title} breadcrumbs={frontmatter.breadcrumbs}>
  <div class="mdx-page">
    <slot />
  </div>
</BaseLayout>
