---
interface Props {
  variant?: 'default' | 'highlight' | 'accent' | 'muted';
  spacing?: 'sm' | 'md' | 'lg' | 'xl';
  container?: 'sm' | 'md' | 'lg' | 'xl' | 'full';
  class?: string;
}

const {
  variant = 'default',
  spacing = 'lg',
  container = 'xl',
  class: className = '',
} = Astro.props;

// Variant classes
const variantClasses = {
  default: 'bg-white dark:bg-gray-900',
  highlight: 'bg-gradient-to-br from-primary/5 via-transparent to-secondary/5',
  accent: 'bg-gray-50 dark:bg-gray-800',
  muted: 'bg-gray-25 dark:bg-gray-850',
};

// Spacing classes
const spacingClasses = {
  sm: 'py-8 px-4 lg:py-12 lg:px-6',
  md: 'py-12 px-4 lg:py-16 lg:px-6',
  lg: 'py-16 px-4 lg:py-20 lg:px-6',
  xl: 'py-20 px-4 lg:py-24 lg:px-6',
};

// Container classes
const containerClasses = {
  sm: 'max-w-3xl',
  md: 'max-w-5xl',
  lg: 'max-w-6xl',
  xl: 'max-w-7xl',
  full: 'max-w-none',
};

const sectionClasses = `section-separator ${variantClasses[variant]} ${className}`.trim();
const containerClassNames = `mx-auto ${containerClasses[container]} ${spacingClasses[spacing]}`.trim();
---

<section class={sectionClasses}>
  <div class={containerClassNames}>
    <slot />
  </div>
</section>