---
import SliderClient from './slider.vue';

interface Author {
  name: string;
  title: string;
  image: string;
  link?: string;
}

interface Testimonial {
  quote: string;
  author: Author;
}

interface Props {
  testimonials: Testimonial[];
}

const { testimonials } = Astro.props;
---

<section class="testimonial-section">
  <div class="testimonial-container">
    <div class="testimonial-header">
      <h2 class="testimonial-title">
        Don't just take our word for it ...
      </h2>
      <div class="testimonial-subtitle">
        Here's what our partners have to say about working with us
      </div>
    </div>

    <SliderClient testimonials={testimonials} client:load />
  </div>
</section>

<style>
  .testimonial-section {
    background: linear-gradient(to bottom, #f9fafb, #f3f4f6);
    padding: 4rem 0;
    position: relative;
    overflow: hidden;
  }

  .testimonial-section::before {
    content: "";
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 6px;
    background: linear-gradient(to right, #4f46e5, #8b5cf6);
  }

  .dark .testimonial-section {
    background: linear-gradient(to bottom, #111827, #1f2937);
  }

  .testimonial-container {
    max-width: 1280px;
    margin: 0 auto;
    padding: 0 1rem;
  }

  .testimonial-header {
    max-width: 800px;
    margin: 0 auto 3rem;
    text-align: center;
  }

  .testimonial-title {
    font-size: 2.25rem;
    font-weight: 800;
    line-height: 1.2;
    color: #111827;
    margin-bottom: 1rem;
    letter-spacing: -0.025em;
  }

  .dark .testimonial-title {
    color: #f9fafb;
  }

  .testimonial-subtitle {
    font-size: 1.125rem;
    color: #6b7280;
    max-width: 600px;
    margin: 0 auto;
  }

  .dark .testimonial-subtitle {
    color: #9ca3af;
  }

  @media (max-width: 768px) {
    .testimonial-section {
      padding: 3rem 0;
    }

    .testimonial-title {
      font-size: 1.875rem;
    }

    .testimonial-subtitle {
      font-size: 1rem;
    }
  }
</style>
