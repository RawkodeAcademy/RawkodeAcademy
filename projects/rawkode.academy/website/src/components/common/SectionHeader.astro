---
type Props = {
	title: string;
	showSeparator?: boolean;
	class?: string;
};

const { title, showSeparator = true, class: className = "" } = Astro.props;
---

<div class={`flex items-center mb-8 ${className}`}>
	<div class="h-10 w-1 bg-linear-to-b from-primary to-secondary rounded-full mr-3"></div>
	<h2 class="text-2xl md:text-3xl font-bold text-gray-900 dark:text-white">
		{title}
	</h2>
	{showSeparator && (
		<div class="ml-4 h-px grow bg-linear-to-r from-primary/30 to-transparent"></div>
	)}
</div>