---

type Props = {
	href: string;
	class?: string;
};

const { href, class: className = "" } = Astro.props;
---

<a href={href} class={`h-full ${className}`}>
	<article
		class="p-0 bg-white rounded-xl overflow-hidden shadow-lg dark:bg-gray-800 dark:border-gray-700 h-full flex flex-col transition-all duration-300 border border-gray-100 dark:border-gray-700"
	>
		{Astro.slots.has("cover") && (
			<div class="relative">
				<slot name="cover" />
				{Astro.slots.has("overlay") && (
					<slot name="overlay" />
				)}
				{Astro.slots.has("badge") && (
					<div class="absolute top-3 left-3 z-20">
						<slot name="badge" />
					</div>
				)}
			</div>
		)}
		<div class="p-6 flex flex-col grow">
			<slot name="content" />
			{Astro.slots.has("footer") && (
				<div class="mt-auto pt-4 border-t border-gray-100 dark:border-gray-700">
					<slot name="footer" />
				</div>
			)}
		</div>
	</article>
</a>