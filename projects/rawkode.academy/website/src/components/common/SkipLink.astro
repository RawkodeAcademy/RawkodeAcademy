---
export interface Props {
	href?: string;
	text?: string;
}

const { href = "#main-content", text = "Skip to main content" } = Astro.props;
---

<a
	href={href}
	class="skip-link sr-only focus:not-sr-only focus:absolute focus:top-4 focus:left-4 focus:z-50 focus:px-4 focus:py-2 focus:bg-primary-600 focus:text-white focus:rounded-md focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-primary-500"
>
	{text}
</a>

<style>
	.skip-link:focus {
		clip: auto;
		clip-path: none;
		height: auto;
		width: auto;
		margin: 0;
		overflow: visible;
		position: absolute;
		white-space: nowrap;
	}
</style>