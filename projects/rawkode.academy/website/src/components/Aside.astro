---
import {
	ExclamationTriangleIcon,
	LightBulbIcon,
	FireIcon,
	InformationCircleIcon,
} from "@heroicons/vue/24/outline";

interface Props {
	variant: "tip" | "caution" | "danger" | "info";
}

const { variant } = Astro.props as Props;

// Define styles based on variant
let styles = {
	container: "",
	icon: "",
	gradient: "",
	border: "",
	links: ""
};

switch (variant) {
	case "tip":
		styles.container = "bg-gradient-to-r from-green-50 to-green-100 text-green-800 dark:from-green-950/80 dark:to-green-900/80 dark:text-green-100";
		styles.icon = "text-green-600 dark:text-green-400";
		styles.gradient = "from-green-500 to-green-400";
		styles.border = "border-green-500";
		styles.links = "text-green-700 underline decoration-green-500 decoration-2 underline-offset-2 font-medium hover:text-green-900 hover:decoration-green-700 focus:outline-none focus:ring-2 focus:ring-green-500 dark:text-green-300 dark:decoration-green-400 dark:hover:text-green-200 dark:hover:decoration-green-300";
		break;
	case "caution":
		styles.container = "bg-gradient-to-r from-orange-50 to-orange-100 text-orange-800 dark:from-orange-950/80 dark:to-orange-900/80 dark:text-orange-100";
		styles.icon = "text-orange-600 dark:text-orange-400";
		styles.gradient = "from-yellow-500 to-orange-400";
		styles.border = "border-yellow-500";
		styles.links = "text-orange-700 underline decoration-orange-500 decoration-2 underline-offset-2 font-medium hover:text-orange-900 hover:decoration-orange-700 focus:outline-none focus:ring-2 focus:ring-orange-500 dark:text-orange-300 dark:decoration-orange-400 dark:hover:text-orange-200 dark:hover:decoration-orange-300";
		break;
	case "danger":
		styles.container = "bg-gradient-to-r from-red-50 to-red-100 text-red-800 dark:from-red-950/80 dark:to-red-900/80 dark:text-red-100";
		styles.icon = "text-red-600 dark:text-red-400";
		styles.gradient = "from-red-500 to-red-400";
		styles.border = "border-red-500";
		styles.links = "text-red-700 underline decoration-red-500 decoration-2 underline-offset-2 font-medium hover:text-red-900 hover:decoration-red-700 focus:outline-none focus:ring-2 focus:ring-red-500 dark:text-red-300 dark:decoration-red-400 dark:hover:text-red-200 dark:hover:decoration-red-300";
		break;
	case "info":
		styles.container = "bg-gradient-to-r from-blue-50 to-blue-100 text-blue-800 dark:from-blue-950/80 dark:to-blue-900/80 dark:text-blue-100";
		styles.icon = "text-blue-600 dark:text-blue-400";
		styles.gradient = "from-blue-500 to-blue-400";
		styles.border = "border-blue-500";
		styles.links = "text-blue-700 underline decoration-blue-500 decoration-2 underline-offset-2 font-medium hover:text-blue-900 hover:decoration-blue-700 focus:outline-none focus:ring-2 focus:ring-blue-500 dark:text-blue-300 dark:decoration-blue-400 dark:hover:text-blue-200 dark:hover:decoration-blue-300";
		break;
}
---

<div class={`aside my-3 rounded-lg backdrop-blur-sm shadow-sm border-t border-r border-b ${styles.border} prose-p:my-0 ${styles.container} relative overflow-hidden`}>
	<!-- Futuristic accent line -->
	<div class={`absolute left-0 top-0 bottom-0 w-1 bg-gradient-to-b ${styles.gradient}`}></div>

	<!-- Content container with reduced padding -->
	<div class="px-3 py-2.5 relative z-10">
		<div class="flex items-center gap-2 pb-1.5">
			<div class={`rounded-full bg-gradient-to-br ${styles.gradient} p-1.5 flex items-center justify-center`}>
				{variant === "tip" && <LightBulbIcon class="h-4 w-4 text-white" aria-hidden="true" client:only="vue" />}
				{variant === "caution" && <ExclamationTriangleIcon class="h-4 w-4 text-white" aria-hidden="true" client:only="vue" />}
				{variant === "danger" && <FireIcon class="h-4 w-4 text-white" aria-hidden="true" client:only="vue" />}
				{variant === "info" && <InformationCircleIcon class="h-4 w-4 text-white" aria-hidden="true" client:only="vue" />}
			</div>
			<p class="text-xs font-bold tracking-wider">{variant.toUpperCase()}</p>
		</div>
		<div class="pl-1">
			<slot />
		</div>
	</div>
</div>

<style>
	/* Ensure links inherit the appropriate styling based on variant */
	.aside :global(a) {
		@apply transition-colors duration-200;
	}

	/* Apply variant-specific link styling */
	.aside:global(.border-green-500) :global(a) {
		@apply text-green-700 underline decoration-green-500 decoration-2 underline-offset-2 font-medium;
		@apply hover:text-green-900 hover:decoration-green-700;
		@apply focus:outline-none focus:ring-2 focus:ring-green-500;
		@apply dark:text-green-300 dark:decoration-green-400 dark:hover:text-green-200 dark:hover:decoration-green-300;
	}

	.aside:global(.border-yellow-500) :global(a) {
		@apply text-orange-700 underline decoration-orange-500 decoration-2 underline-offset-2 font-medium;
		@apply hover:text-orange-900 hover:decoration-orange-700;
		@apply focus:outline-none focus:ring-2 focus:ring-orange-500;
		@apply dark:text-orange-300 dark:decoration-orange-400 dark:hover:text-orange-200 dark:hover:decoration-orange-300;
	}

	.aside:global(.border-red-500) :global(a) {
		@apply text-red-700 underline decoration-red-500 decoration-2 underline-offset-2 font-medium;
		@apply hover:text-red-900 hover:decoration-red-700;
		@apply focus:outline-none focus:ring-2 focus:ring-red-500;
		@apply dark:text-red-300 dark:decoration-red-400 dark:hover:text-red-200 dark:hover:decoration-red-300;
	}

	.aside:global(.border-blue-500) :global(a) {
		@apply text-blue-700 underline decoration-blue-500 decoration-2 underline-offset-2 font-medium;
		@apply hover:text-blue-900 hover:decoration-blue-700;
		@apply focus:outline-none focus:ring-2 focus:ring-blue-500;
		@apply dark:text-blue-300 dark:decoration-blue-400 dark:hover:text-blue-200 dark:hover:decoration-blue-300;
	}
</style>
