---
import Button from "@/components/common/Button.vue";
import PageHero from "@/components/common/PageHero.vue";
import PartnerLogos from "@/components/partner/logos.astro";
import Page from "@/wrappers/page.astro";

export const prerender = true;

const services = [
	{
		icon: "rocket",
		title: "Strategic Partnerships",
		description:
			"Accelerate developer adoption through authentic technical content and strategic guidance.",
		link: "/organizations/partnerships",
		features: [
			"Expert-led technical content",
			"Developer community engagement",
			"Flexible partnership tiers",
			"Measurable outcomes",
		],
	},
	{
		icon: "wrench",
		title: "Expert Consulting",
		description:
			"Transform your developer experience and go-to-market strategy with battle-tested expertise.",
		link: "/organizations/consulting",
		features: [
			"Developer experience audits",
			"Technical strategy workshops",
			"Developer tools optimization",
			"Platform engineering guidance",
		],
	},
	{
		icon: "academic",
		title: "Team Training",
		description:
			"Empower your teams with hands-on cloud native training programs tailored to your needs.",
		link: "/organizations/training",
		features: [
			"Custom curriculum design",
			"Hands-on workshops",
			"Real-world scenarios",
			"Ongoing learning support",
		],
	},
];
---

<style>
	@reference "@/styles/global.css";

	.service-card {
		@apply bg-white dark:bg-gray-800 rounded-xl border border-gray-200 dark:border-gray-700 p-8 transition-all duration-300 hover:shadow-xl hover:border-primary/50 dark:hover:border-primary/50;
	}

	.service-icon {
		@apply w-12 h-12 mb-6 text-primary;
	}

	.feature-check {
		@apply w-5 h-5 text-green-500 flex-shrink-0;
	}

	.stat-card {
		@apply text-center p-6;
	}

	.stat-value {
		@apply text-4xl md:text-5xl font-bold text-primary mb-2;
	}

	.stat-label {
		@apply text-gray-600 dark:text-gray-300 text-sm uppercase tracking-wide;
	}
</style>

<Page
	title="Enterprise Solutions | Rawkode Academy"
	description="Partner with Rawkode Academy for strategic partnerships, expert consulting, and team training to accelerate your cloud native journey."
>
	<!-- Hero Section -->
	<PageHero
		title="Enterprise Solutions for Modern Teams"
		subtitle="Accelerate your cloud native journey with strategic partnerships, expert consulting, and hands-on training programs designed to drive measurable results."
		badge="For Organizations"
		stats={[
			{ label: 'Global Reach' },
			{ label: 'Proven Expertise' },
			{ label: 'Measurable Impact' }
		]}
	>
		<Fragment slot="actions">
			<Button href="#services" variant="primary" size="lg">Explore Services</Button>
			<Button href="/organizations/lets-chat" variant="secondary" size="lg">Schedule a Call</Button>
		</Fragment>
	</PageHero>

	<!-- Stats Section -->
	<section class="py-16 bg-gray-50 dark:bg-gray-900">
		<div class="max-w-6xl mx-auto px-4">
			<div class="grid grid-cols-1 md:grid-cols-4 gap-8">
				<div class="stat-card">
					<div class="stat-value">100K+</div>
					<div class="stat-label">Developers Reached</div>
				</div>
				<div class="stat-card">
					<div class="stat-value">90+</div>
					<div class="stat-label">Technologies Covered</div>
				</div>
				<div class="stat-card">
					<div class="stat-value">500+</div>
					<div class="stat-label">Hours of Content</div>
				</div>
				<div class="stat-card">
					<div class="stat-value">1M+</div>
					<div class="stat-label">Developer Views</div>
				</div>
			</div>
		</div>
	</section>

	<!-- Why Choose Us Section -->
	<section class="py-16 bg-white dark:bg-gray-800">
		<div class="max-w-6xl mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
					Why Choose Rawkode Academy?
				</h2>
				<p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
					We bridge the critical gap between technical innovation and developer understanding
				</p>
			</div>

    <div class="grid md:grid-cols-3 gap-8">
				<div class="text-center">
					<div class="inline-flex items-center justify-center w-16 h-16 bg-primary/10 rounded-full mb-4">
						<svg class="w-8 h-8 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Authentic Expertise</h3>
					<p class="text-gray-600 dark:text-gray-300">
						Deep technical knowledge combined with real-world experience building and deploying cloud native applications
					</p>
				</div>

				<div class="text-center">
					<div class="inline-flex items-center justify-center w-16 h-16 bg-secondary/10 rounded-full mb-4">
						<svg class="w-8 h-8 text-secondary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 20h5v-2a3 3 0 00-5.356-1.857M17 20H7m10 0v-2c0-.656-.126-1.283-.356-1.857M7 20H2v-2a3 3 0 015.356-1.857M7 20v-2c0-.656.126-1.283.356-1.857m0 0a5.002 5.002 0 019.288 0M15 7a3 3 0 11-6 0 3 3 0 016 0zm6 3a2 2 0 11-4 0 2 2 0 014 0zM7 10a2 2 0 11-4 0 2 2 0 014 0z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Engaged Community</h3>
					<p class="text-gray-600 dark:text-gray-300">
						Access to a passionate, global community of developers actively seeking to learn and adopt new technologies
					</p>
				</div>

				<div class="text-center">
					<div class="inline-flex items-center justify-center w-16 h-16 bg-tertiary/10 rounded-full mb-4">
						<svg class="w-8 h-8 text-tertiary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 19v-6a2 2 0 00-2-2H5a2 2 0 00-2 2v6a2 2 0 002 2h2a2 2 0 002-2zm0 0V9a2 2 0 012-2h2a2 2 0 012 2v10m-6 0a2 2 0 002 2h2a2 2 0 002-2m0 0V5a2 2 0 012-2h2a2 2 0 012 2v14a2 2 0 01-2 2h-2a2 2 0 01-2-2z"></path>
						</svg>
					</div>
					<h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">Measurable Results</h3>
					<p class="text-gray-600 dark:text-gray-300">
						Data-driven approach with comprehensive analytics and reporting to track engagement and adoption
					</p>
				</div>
			</div>
		</div>
	</section>

	<!-- Services Section -->
	<section id="services" class="py-20 bg-gray-50 dark:bg-gray-900">
		<div class="max-w-7xl mx-auto px-4">
			<div class="text-center mb-16">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
					Our Services
				</h2>
				<p class="text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
					Tailored solutions to meet your organization's unique needs
				</p>
			</div>

			<div class="grid md:grid-cols-3 gap-8">
				{services.map((service) => (
					<div class="service-card">
            <div class="mb-6">
              {service.icon === 'rocket' && (
                <svg class="w-12 h-12 mb-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                </svg>
              )}
              {service.icon === 'wrench' && (
                <svg class="w-12 h-12 mb-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10.325 4.317c.426-1.756 2.924-1.756 3.35 0a1.724 1.724 0 002.573 1.066c1.543-.94 3.31.826 2.37 2.37a1.724 1.724 0 001.065 2.572c1.756.426 1.756 2.924 0 3.35a1.724 1.724 0 00-1.066 2.573c.94 1.543-.826 3.31-2.37 2.37a1.724 1.724 0 00-2.572 1.065c-.426 1.756-2.924 1.756-3.35 0a1.724 1.724 0 00-2.573-1.066c-1.543.94-3.31-.826-2.37-2.37a1.724 1.724 0 00-1.065-2.572c-1.756-.426-1.756-2.924 0-3.35a1.724 1.724 0 001.066-2.573c-.94-1.543.826-3.31 2.37-2.37.996.608 2.296.07 2.572-1.065z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 12a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
              )}
              {service.icon === 'academic' && (
                <svg class="w-12 h-12 mb-6 text-primary" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path d="M12 14l9-5-9-5-9 5 9 5z"></path>
                  <path d="M12 14l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 14l9-5-9-5-9 5 9 5zm0 0l6.16-3.422a12.083 12.083 0 01.665 6.479A11.952 11.952 0 0012 20.055a11.952 11.952 0 00-6.824-2.998 12.078 12.078 0 01.665-6.479L12 14zm-4 6v-7.5l4-2.222"></path>
                </svg>
              )}
            </div>

						<h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-3">
							{service.title}
						</h3>

						<p class="text-gray-600 dark:text-gray-300 mb-6">
							{service.description}
						</p>

            <ul class="space-y-3 mb-8">
              {service.features.map((feature) => (
                <li class="flex items-center text-gray-700 dark:text-gray-200">
                  <svg class="w-5 h-5 text-green-500 flex-shrink-0 mr-2" fill="currentColor" viewBox="0 0 20 20">
                    <path fill-rule="evenodd" d="M10 18a8 8 0 100-16 8 8 0 000 16zm3.707-9.293a1 1 0 00-1.414-1.414L9 10.586 7.707 9.293a1 1 0 00-1.414 1.414l2 2a1 1 0 001.414 0l4-4z" clip-rule="evenodd"></path>
                  </svg>
                  {feature}
                </li>
              ))}
            </ul>

						<a
							href={service.link}
							class="inline-flex items-center text-primary hover:text-secondary font-semibold transition-colors"
						>
							Learn More
							<svg class="w-5 h-5 ml-1" fill="currentColor" viewBox="0 0 20 20">
								<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
							</svg>
						</a>
					</div>
				))}
			</div>
		</div>
	</section>

	<!-- Trusted Partners Section -->
	<section class="py-16 bg-white dark:bg-gray-800">
		<div class="max-w-6xl mx-auto px-4">
			<div class="text-center mb-12">
				<h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4">
					Trusted by Innovative Companies
				</h2>
				<p class="text-xl text-gray-600 dark:text-gray-300">
					Join these organizations who have partnered with us to accelerate their cloud native journey
				</p>
			</div>

			<div class="mt-10">
				<PartnerLogos />
			</div>
		</div>
	</section>

	<!-- CTA Section -->
	<section class="py-20 bg-gradient-to-r from-primary to-secondary text-white">
		<div class="max-w-4xl mx-auto px-4 text-center">
			<h2 class="text-3xl md:text-4xl font-bold mb-6">
				Ready to Accelerate Your Cloud Native Journey?
			</h2>
			<p class="text-xl mb-8 opacity-90">
				Schedule a consultation to explore how we can help you achieve your goals
			</p>
			<div class="flex flex-col sm:flex-row justify-center gap-4">
				<a
					href="/organizations/lets-chat"
					class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-white text-primary rounded-lg hover:bg-gray-100 transition-all duration-200 shadow-lg hover:shadow-xl"
				>
					Schedule a Call
					<svg class="w-5 h-5 ml-2" fill="currentColor" viewBox="0 0 20 20">
						<path fill-rule="evenodd" d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z" clip-rule="evenodd"></path>
					</svg>
				</a>
				<a
					href="#services"
					class="inline-flex items-center justify-center px-8 py-4 text-lg font-semibold bg-transparent border-2 border-white text-white rounded-lg hover:bg-white/10 transition-all duration-200"
				>
					View Services
				</a>
			</div>
		</div>
	</section>
</Page>
