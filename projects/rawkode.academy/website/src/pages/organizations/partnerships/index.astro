---
import Button from "@/components/common/Button.vue";
import PageHero from "@/components/common/PageHero.vue";
import FAQ from "@/components/faq/list.vue";
import FeatureListIcons from "@/components/feature/list-icons.vue";
import PartnerLogos from "@/components/partner/logos.astro";
import Pricing from "@/components/partner/pricing/cards.vue";
import Featured from "@/components/partner/pricing/featured.vue";
import VsConference from "@/components/partner/vs-conference.astro";
import Stats from "@/components/stats/simple.vue";
import TestimonialSlider from "@/components/testimonial/slider.astro";
import Page from "@/wrappers/page.astro";
---

<style>
	@reference "@/styles/global.css";

	.section-separator {
		@apply py-16 md:py-20;
	}

	.section-highlight {
		@apply bg-gray-50 dark:bg-gray-900 relative overflow-hidden;
	}

	.section-highlight::before {
		content: "";
		@apply absolute top-0 left-0 w-full h-1 bg-linear-to-r from-primary to-secondary;
	}

	.section-highlight::after {
		content: "";
		@apply absolute -bottom-8 -right-8 w-32 h-32 rounded-full bg-linear-to-r from-primary/10 to-secondary/10 blur-2xl;
	}
</style>

<Page
	title="Strategic Technology Partnerships | Rawkode Academy"
	description="Partner with Rawkode Academy to accelerate developer adoption, improve product experience, and drive growth through expert technical content and strategic guidance."
>
	<!-- Hero Section -->
	<PageHero
		title="Strategic Technology Partnerships"
		subtitle="Accelerate developer adoption and product growth through authentic technical content and strategic guidance."
		badge="Partner With Us"
		stats={[
			{ label: '100K+ Developers' },
			{ label: 'Global Reach' },
			{ label: 'Proven Results' }
		]}
	>
		<Fragment slot="actions">
			<Button href="#benefits" variant="primary" size="lg">Explore Benefits</Button>
			<Button href="/organizations/lets-chat" variant="secondary" size="lg">Become a Partner</Button>
		</Fragment>
	</PageHero>

	<div class="max-w-5xl mx-auto mb-16 text-center pt-16">
		<p class="text-xl text-gray-700 dark:text-gray-200 mb-8 leading-relaxed">
			At Rawkode Academy, we connect cutting-edge technologies with the
			developers who bring them to life. Our expertise bridges the critical gap
			between technical innovation and developer understanding.
		</p>

		<div class="grid md:grid-cols-3 gap-6 text-left mt-12">
			<div
				class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700"
			>
				<div class="flex items-center mb-4">
					<div class="bg-primary/10 p-3 rounded-full mr-4">
						<svg
							class="w-6 h-6 text-primary"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M13 10V3L4 14h7v7l9-11h-7z"></path>
						</svg>
					</div>
					<h3 class="text-lg font-bold">Amplify Your Reach</h3>
				</div>
				<p class="text-gray-600 dark:text-gray-300">
					Extend your message to our engaged community of developers and
					technical decision-makers through authentic, expert-led content.
				</p>
			</div>

			<div
				class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700"
			>
				<div class="flex items-center mb-4">
					<div class="bg-secondary/10 p-3 rounded-full mr-4">
						<svg
							class="w-6 h-6 text-secondary"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9.663 17h4.673M12 3v1m6.364 1.636l-.707.707M21 12h-1M4 12H3m3.343-5.657l-.707-.707m2.828 9.9a5 5 0 117.072 0l-.548.547A3.374 3.374 0 0014 18.469V19a2 2 0 11-4 0v-.531c0-.895-.356-1.754-.988-2.386l-.548-.547z"
							></path>
						</svg>
					</div>
					<h3 class="text-lg font-bold">Accelerate Adoption</h3>
				</div>
				<p class="text-gray-600 dark:text-gray-300">
					Remove barriers to entry through strategic educational content that
					showcases your product's unique value and practical applications.
				</p>
			</div>

			<div
				class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700"
			>
				<div class="flex items-center mb-4">
					<div class="bg-tertiary/10 p-3 rounded-full mr-4">
						<svg
							class="w-6 h-6 text-tertiary"
							fill="none"
							stroke="currentColor"
							viewBox="0 0 24 24"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path
								stroke-linecap="round"
								stroke-linejoin="round"
								stroke-width="2"
								d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z"
							></path>
						</svg>
					</div>
					<h3 class="text-lg font-bold">Strategic Growth</h3>
				</div>
				<p class="text-gray-600 dark:text-gray-300">
					Refine your developer experience and go-to-market approach with expert
					guidance that drives measurable business outcomes.
				</p>
			</div>
		</div>
	</div>

	<section id="benefits" class="bg-white dark:bg-gray-800 py-16">
		<FeatureListIcons />
	</section>

	<section class="section-highlight section-separator">
		<div class="py-12 px-4 mx-auto max-w-(--breakpoint-xl) lg:py-16 lg:px-6">
			<div class="text-center mb-10">
				<h2
					class="mb-4 text-3xl font-bold tracking-tight text-gray-900 dark:text-white md:text-4xl"
				>
					Proven Developer Engagement
				</h2>
				<p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
					Our strategic partnerships deliver measurable results for technology
					companies worldwide
				</p>
			</div>
			<Stats
				title=""
				stats={[
					{
						label: "Technologies Covered",
						value: "90+",
					},
					{
						label: "Hours of Content Produced",
						value: "500+",
					},
					{
						label: "Developer Views",
						value: "1M+",
					},
				]}
			/>

			<TestimonialSlider
				type="partner"
				blurb="Hear directly from the companies that have partnered with us"
			/>
		</div>
	</section>

	<section
		class="section-highlight section-separator bg-linear-to-b from-white to-gray-50 dark:from-gray-900 dark:to-black"
	>
		<div class="py-2 px-4 mx-auto lg:px-6 max-w-7xl">
			<div class="mb-12 lg:mb-16 text-center">
				<h2
					class="mb-4 text-3xl font-bold tracking-tight text-gray-900 dark:text-white md:text-4xl"
				>
					Our <span class="text-primary">Trusted</span> Partners
				</h2>
				<p
					class="text-gray-600 sm:text-xl dark:text-gray-400 max-w-3xl mx-auto"
				>
					Join these innovative companies who trust Rawkode Academy to connect
					their technologies with developers worldwide.
				</p>
			</div>

			<div class="relative">
				<div
					class="absolute inset-0 bg-linear-to-r from-primary/5 via-transparent to-secondary/5 rounded-xl"
				>
				</div>
				<div
					class="relative bg-white/50 dark:bg-gray-800/50 p-8 rounded-xl border border-gray-200 dark:border-gray-700 shadow-sm"
				>
					<PartnerLogos />
				</div>
			</div>
		</div>
	</section>

	<section class="bg-white dark:bg-gray-800 py-16">
		<div class="container mx-auto px-4">
			<VsConference />
		</div>
	</section>

	<section class="section-highlight section-separator">
		<div class="py-12 px-4 mx-auto max-w-(--breakpoint-xl) lg:py-16 lg:px-6">
			<div class="mx-auto max-w-(--breakpoint-md) text-center mb-12">
				<h2
					class="mb-4 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
				>
					Partnership Tiers
				</h2>
				<p class="mb-5 text-gray-600 sm:text-xl dark:text-gray-300">
					Whether you're looking to increase brand awareness, educate developers
					about your technology, or develop a comprehensive go-to-market
					strategy, we offer flexible partnership options to meet your specific
					goals.
				</p>
			</div>

			<div class="mx-auto max-w-(--breakpoint-md) text-center mb-10">
				<p class="mb-5 text-gray-600 sm:text-xl dark:text-gray-300">
					The Rawkode Academy is proudly brought to you from Glasgow, Scotland.
					Our partnership tiers are named after traditional Scottish whisky
					measurements, reflecting our heritage of quality, craftsmanship, and
					attention to detail.
				</p>
				<p class="mb-5 text-gray-600 sm:text-xl dark:text-gray-300">üè¥Û†ÅßÛ†Å¢Û†Å≥Û†Å£Û†Å¥Û†Åø ü•É</p>
			</div>

			<div class="mx-auto max-w-6xl">
				<Featured />
				<Pricing />
			</div>
		</div>
	</section>

	<section class="bg-white dark:bg-gray-800 section-separator">
		<div class="px-4 mx-auto max-w-(--breakpoint-xl) lg:px-6">
			<div class="mx-auto max-w-(--breakpoint-md) text-center">
				<div class="inline-block p-2 mb-6 bg-primary/10 rounded-full">
					<svg
						class="w-8 h-8 text-primary"
						fill="none"
						stroke="currentColor"
						viewBox="0 0 24 24"
						xmlns="http://www.w3.org/2000/svg"
					>
						<path
							stroke-linecap="round"
							stroke-linejoin="round"
							stroke-width="2"
							d="M15 15l-2 5L9 9l11 4-5 2zm0 0l5 5M7.188 2.239l.777 2.897M5.136 7.965l-2.898-.777M13.95 4.05l-2.122 2.122m-5.657 5.656l-2.12 2.122"
						></path>
					</svg>
				</div>

				<h2
					class="mb-6 text-4xl tracking-tight font-extrabold text-gray-900 dark:text-white"
				>
					Ready to Transform Your <span class="text-primary"
						>Developer Strategy</span
					>?
				</h2>
				<p
					class="mb-10 text-xl text-gray-600 dark:text-gray-300 max-w-3xl mx-auto"
				>
					Schedule a consultation to explore how a strategic partnership can
					align with your specific business objectives and connect your
					technology with our passionate developer community.
				</p>
				<div class="flex flex-col sm:flex-row justify-center gap-4">
					<a
						href="/organizations/lets-chat"
						class="inline-flex items-center justify-center px-6 py-4 text-base font-medium text-white bg-primary hover:bg-secondary rounded-lg transition-all duration-300 shadow-md hover:shadow-lg"
					>
						Schedule Your Consultation
						<svg
							class="w-5 h-5 ml-2"
							fill="currentColor"
							viewBox="0 0 20 20"
							xmlns="http://www.w3.org/2000/svg"
						>
							<path
								fill-rule="evenodd"
								d="M10.293 3.293a1 1 0 011.414 0l6 6a1 1 0 010 1.414l-6 6a1 1 0 01-1.414-1.414L14.586 11H3a1 1 0 110-2h11.586l-4.293-4.293a1 1 0 010-1.414z"
								clip-rule="evenodd"></path>
						</svg>
					</a>
				</div>
			</div>
		</div>
	</section>

	<section class="bg-white dark:bg-gray-800 section-separator">
		<div class="px-4 py-12 mx-auto max-w-(--breakpoint-xl) lg:py-16">
			<div class="mx-auto max-w-(--breakpoint-md) text-center mb-8">
				<h2
					class="mb-4 text-3xl tracking-tight font-extrabold text-gray-900 dark:text-white"
				>
					Frequently Asked Questions
				</h2>
				<p class="text-lg text-gray-600 dark:text-gray-300">
					Learn more about partnering with Rawkode Academy
				</p>
			</div>
			<FAQ />
		</div>
	</section>
</Page>
