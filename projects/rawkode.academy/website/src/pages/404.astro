---
import MinimalLayout from "@/layouts/minimal.astro";

export const prerender = true;

const quickLinks = [
	{
		title: "Return home",
		description: "Head back to the front page and resume your journey.",
		href: "/",
	},
	{
		title: "Browse courses",
		description: "Deep dives, labs, and workshops from Rawkode Academy.",
		href: "/courses",
	},
	{
		title: "Learning paths",
		description: "Opinionated roadmaps to master cloud native topics.",
		href: "/learning-paths",
	},
	{
		title: "Technology guides",
		description: "Explore the tools, runtimes, and projects we teach.",
		href: "/technology",
	},
];

const supportLinks = [
	{
		title: "Search the site",
		description: "Find videos, articles, and docs across the academy.",
		href: "/search",
	},
	{
		title: "Say hi on Zulip",
		description: "Ask the community for a direct link or recommendation.",
		href: "https://chat.rawkode.academy/#narrow/stream/402-lobby",
	},
];
---

<MinimalLayout title="404 â€“ Rawkode Academy" description="We couldn't find that page, but here are a few quick ways to get back on course.">
	<main class="relative isolate min-h-screen overflow-hidden bg-slate-950 text-slate-100">
		<div class="pointer-events-none absolute inset-0">
			<div class="absolute -top-32 left-1/2 h-80 w-80 -translate-x-1/2 rounded-full bg-primary/30 blur-3xl"></div>
			<div class="absolute bottom-0 left-0 right-0 h-40 bg-gradient-to-t from-slate-950 via-slate-950/70 to-transparent"></div>
			<div class="absolute inset-0 bg-[radial-gradient(circle_at_top,_rgba(148,163,184,0.12),_transparent_55%)]"></div>
		</div>

		<section class="relative z-10 px-6 py-24 sm:py-32">
			<div class="mx-auto flex max-w-4xl flex-col items-center text-center">
				<p class="text-xs uppercase tracking-[0.4em] text-primary/70">Lost in the cluster</p>
				<h1 class="mt-6 text-4xl font-semibold leading-tight text-white sm:text-5xl">
					We couldn't route that request.
				</h1>
				<p class="mt-4 text-lg text-slate-300">
					The page you're looking for may have moved, or the URL has a typo. Let's get you
					back to shipping something great.
				</p>
				<div class="mt-10 flex flex-wrap items-center justify-center gap-4">
					<a
						href="/"
						class="inline-flex items-center gap-2 rounded-2xl bg-gradient-to-r from-primary to-secondary px-6 py-3 text-base font-semibold text-white shadow-lg shadow-primary/30 transition hover:scale-[1.01]"
					>
						<span>Back to homepage</span>
						<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14m-7-7l7 7-7 7" />
						</svg>
					</a>
					<a
						href="https://github.com/RawkodeAcademy/RawkodeAcademy/issues/new/choose"
						class="inline-flex items-center gap-2 rounded-2xl border border-white/20 px-6 py-3 text-base font-semibold text-white/90 transition hover:border-white/40"
						target="_blank"
						rel="noopener noreferrer"
					>
						Report an issue
						<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
							<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 7h4m0 0v4m0-4l-5 5m-1 6a9 9 0 110-18 9 9 0 010 18z" />
						</svg>
					</a>
				</div>
			</div>

			<form action="/search" method="get" class="mx-auto mt-12 flex max-w-3xl items-center justify-between gap-2 rounded-3xl border border-white/10 bg-white/5 px-4 py-3 text-left backdrop-blur">
				<div class="flex flex-1 flex-col">
					<label for="not-found-search" class="text-xs uppercase tracking-[0.3em] text-white/60">Search everything</label>
					<input
						type="search"
						name="q"
						id="not-found-search"
						placeholder="Videos, docs, workshops, experiments..."
						class="mt-2 bg-transparent text-base text-white placeholder:text-slate-400 focus:outline-none"
						required
					/>
				</div>
				<button
					type="submit"
					class="inline-flex h-12 w-12 items-center justify-center rounded-2xl bg-white/10 text-white transition hover:bg-white/20"
					aria-label="Search"
				>
					<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
						<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z" />
					</svg>
				</button>
			</form>

			<div class="mx-auto mt-16 grid max-w-5xl gap-6 md:grid-cols-2">
				{quickLinks.map((link) => (
					<a
						key={link.href}
						href={link.href}
						class="group relative overflow-hidden rounded-3xl border border-white/10 bg-white/5 p-6 text-left backdrop-blur transition hover:border-white/30 hover:bg-white/10"
					>
						<div class="flex items-center justify-between gap-6">
							<div>
								<p class="text-sm uppercase tracking-[0.3em] text-primary/80">{link.title}</p>
								<p class="mt-3 text-base text-slate-200">{link.description}</p>
							</div>
							<div class="flex h-12 w-12 items-center justify-center rounded-2xl bg-white/10 text-white transition group-hover:translate-x-1">
								<svg class="h-5 w-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
									<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
								</svg>
							</div>
						</div>
					</a>
				))}
			</div>

			<div class="mx-auto mt-16 grid max-w-4xl gap-6 md:grid-cols-2">
				{supportLinks.map((link) => (
					<a
						key={link.href}
						href={link.href}
						class="group flex flex-col gap-3 rounded-3xl border border-white/10 bg-white/5 p-6 text-left backdrop-blur transition hover:border-white/30 hover:bg-white/10"
					>
						<p class="text-sm font-semibold tracking-wide text-white/80">{link.title}</p>
						<p class="text-base text-slate-300">{link.description}</p>
						<span class="inline-flex items-center gap-2 text-sm font-semibold text-primary/80">
							<span>Open</span>
							<svg class="h-4 w-4" fill="none" stroke="currentColor" viewBox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 12h14m-7-7l7 7-7 7" />
							</svg>
						</span>
					</a>
				))}
			</div>
		</section>
	</main>
</MinimalLayout>
