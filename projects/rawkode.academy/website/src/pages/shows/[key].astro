---
import Layout from '../../layouts/page.astro';
import "../../styles/shows.css";

const { key } = Astro.params;

interface Show {
  name: string;
  id: string;
  episodes_aggregate: {
    aggregate: {
      count: number;
    }
  };
}
const response = await fetch("https://api.rawkode.academy/v1/graphql",
  {
    method: 'POST',
    headers: {'Content-Type':'application/json'},
    body: JSON.stringify({
      query: `
        query MyQuery {
          getShow(id: "${key}") {
            id
            name
            episodes_aggregate {
              aggregate {
                count
              }
            }
            episodes  {
              youtube_id
              title
              links
              guests {
                name
              }
            }
          }
        }
        `
    }),
  });
const json = await response.json();
console.log(json);
const show = json.data ? json.data.getShow : null;
if (!show) return Astro.redirect("/404");
const breadcrumbs = [{
  title: 'Shows',
  href: '/shows'
}]

const episodeCount = show.episodes_aggregate.aggregate.count
const latest = show.episodes[episodeCount - 1]
---
<Layout
  title={`${show.name} | Shows | Rawkode Academy`}
  breadcrumbs={breadcrumbs}
>
  <div class="shows__page">
    <div class="shows__heading">
      <h1>{show.name}</h1>
      <p class="shows__description">
        Lorem ipsum dolor sit amet, consectetur adipiscing elit. Sed maximus risus ac justo imperdiet, sed pretium neque maximus.
      </p>
    </div>
    <div class="shows__container shows__container--latest">
      <h2>Latest episode</h2>
      <h3>{latest.title}</h3>
      <iframe width="560" height="315" src={`https://www.youtube.com/embed/${latest.youtube_id}`} title="YouTube video player" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture; web-share" allowfullscreen></iframe>
    </div>
    <div class="shows__container">
      <h2>All episodes</h2>
      <div class="shows">
        <!-- {show.episodes.map(episode =>
          <div>
            <p>{episode.title}</p>
            <img src={`https://img.youtube.com/vi/${episode.youtube_id}/hqdefault.jpg`} alt={episode.title} />
          </div>
        )} -->
      </div>
    </div>
  </div>
</Layout>
