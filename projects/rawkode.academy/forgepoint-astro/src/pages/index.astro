---
import AppLayout from "../components/AppLayout.astro";
import { getCollection } from "astro:content";

const personas = await getCollection("personas");
const activities = await getCollection("activities");
const stories = await getCollection("stories");
const features = await getCollection("features");
const prds = await getCollection("prds");

// Calculate story statistics
const storiesByPriority = stories.reduce((acc, story) => {
  acc[story.data.priority] = (acc[story.data.priority] || 0) + 1;
  return acc;
}, {} as Record<string, number>);

const linkedStories = stories.filter(s => s.data.featureId).length;
const unlinkedStories = stories.length - linkedStories;

// Recent activity (last 5 stories)
const recentStories = [...stories]
  .sort((a, b) => b.id.localeCompare(a.id))
  .slice(0, 5);
---

<AppLayout title="Dashboard - ForgePoint">
  <style>
    .dashboard {
      max-width: 1200px;
      margin: 0 auto;
    }

    .page-header {
      margin-bottom: 32px;
    }

    .page-title {
      font-size: 24px;
      font-weight: 600;
      color: #fff;
      margin-bottom: 8px;
    }

    .page-subtitle {
      font-size: 14px;
      color: #8b8b8d;
    }

    .stats-grid {
      display: grid;
      grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
      gap: 16px;
      margin-bottom: 32px;
    }

    .stat-card {
      background-color: #0e0e10;
      border: 1px solid #1f1f23;
      border-radius: 8px;
      padding: 20px;
      transition: all 0.2s ease;
    }

    .stat-card:hover {
      background-color: #1a1a1d;
      border-color: #2a2a2d;
      transform: translateY(-2px);
    }

    .stat-label {
      font-size: 13px;
      color: #6b6b6d;
      margin-bottom: 8px;
      text-transform: uppercase;
      letter-spacing: 0.05em;
    }

    .stat-value {
      font-size: 28px;
      font-weight: 600;
      color: #fff;
      margin-bottom: 4px;
    }

    .stat-description {
      font-size: 12px;
      color: #8b8b8d;
    }

    .content-grid {
      display: grid;
      grid-template-columns: 2fr 1fr;
      gap: 24px;
    }

    .section {
      background-color: #0e0e10;
      border: 1px solid #1f1f23;
      border-radius: 8px;
      overflow: hidden;
    }

    .section-header {
      padding: 20px;
      border-bottom: 1px solid #1f1f23;
    }

    .section-title {
      font-size: 16px;
      font-weight: 600;
      color: #fff;
    }

    .section-content {
      padding: 20px;
    }

    .activity-item {
      display: flex;
      align-items: center;
      justify-content: space-between;
      padding: 12px 0;
      border-bottom: 1px solid #1f1f23;
    }

    .activity-item:last-child {
      border-bottom: none;
    }

    .activity-title {
      font-size: 14px;
      color: #e1e1e3;
    }

    .activity-meta {
      display: flex;
      align-items: center;
      gap: 8px;
    }

    .activity-time {
      font-size: 12px;
      color: #6b6b6d;
    }

    .priority-dot {
      width: 8px;
      height: 8px;
      border-radius: 50%;
    }

    .priority-must { background-color: #ef4444; }
    .priority-should { background-color: #f59e0b; }
    .priority-could { background-color: #3b82f6; }
    .priority-wont { background-color: #6b7280; }

    .quick-actions {
      display: grid;
      gap: 8px;
    }

    .quick-action {
      display: flex;
      align-items: center;
      gap: 12px;
      padding: 12px 16px;
      background-color: #1a1a1d;
      border: 1px solid #2a2a2d;
      border-radius: 6px;
      text-decoration: none;
      transition: all 0.1s ease;
    }

    .quick-action:hover {
      background-color: #1f1f23;
      border-color: #3a3a3d;
      transform: translateX(4px);
    }

    .quick-action-icon {
      width: 20px;
      height: 20px;
      color: #5e6ad2;
    }

    .quick-action-text {
      flex: 1;
    }

    .quick-action-title {
      font-size: 14px;
      font-weight: 500;
      color: #e1e1e3;
      margin-bottom: 2px;
    }

    .quick-action-description {
      font-size: 12px;
      color: #8b8b8d;
    }

    .priority-breakdown {
      display: flex;
      align-items: center;
      gap: 16px;
      margin-top: 16px;
    }

    .priority-item {
      display: flex;
      align-items: center;
      gap: 6px;
    }

    .priority-count {
      font-size: 14px;
      font-weight: 600;
      color: #e1e1e3;
    }

    .priority-label {
      font-size: 12px;
      color: #8b8b8d;
      text-transform: uppercase;
    }

    @media (max-width: 768px) {
      .content-grid {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <div class="dashboard">
    <div class="page-header">
      <h1 class="page-title">Dashboard</h1>
      <p class="page-subtitle">Overview of your product management workspace</p>
    </div>

    <div class="stats-grid">
      <a href="/personas" class="stat-card">
        <div class="stat-label">Personas</div>
        <div class="stat-value">{personas.length}</div>
        <div class="stat-description">User personas defined</div>
      </a>

      <a href="/activities" class="stat-card">
        <div class="stat-label">Activities</div>
        <div class="stat-value">{activities.length}</div>
        <div class="stat-description">User journey steps</div>
      </a>

      <a href="/stories" class="stat-card">
        <div class="stat-label">Stories</div>
        <div class="stat-value">{stories.length}</div>
        <div class="stat-description">{linkedStories} linked, {unlinkedStories} unlinked</div>
      </a>

      <a href="/features" class="stat-card">
        <div class="stat-label">Features</div>
        <div class="stat-value">{features.length}</div>
        <div class="stat-description">Product features</div>
      </a>
    </div>

    <div class="content-grid">
      <div class="section">
        <div class="section-header">
          <h2 class="section-title">Recent Activity</h2>
        </div>
        <div class="section-content">
          {recentStories.length > 0 ? (
            recentStories.map(story => {
              const activity = activities.find(a => a.id === story.data.activityId);
              return (
                <div class="activity-item">
                  <div>
                    <a href={`/stories/${story.slug}`} class="activity-title">
                      {story.data.title}
                    </a>
                  </div>
                  <div class="activity-meta">
                    <div class={`priority-dot priority-${story.data.priority}`}></div>
                    <span class="activity-time">{activity?.data.title || 'Unknown'}</span>
                  </div>
                </div>
              );
            })
          ) : (
            <p style="color: #6b6b6d; font-size: 14px;">No recent activity</p>
          )}
        </div>
      </div>

      <div>
        <div class="section" style="margin-bottom: 24px;">
          <div class="section-header">
            <h2 class="section-title">Quick Actions</h2>
          </div>
          <div class="section-content">
            <div class="quick-actions">
              <a href="/story-map" class="quick-action">
                <svg class="quick-action-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                  <line x1="3" y1="9" x2="21" y2="9"></line>
                  <line x1="9" y1="21" x2="9" y2="9"></line>
                </svg>
                <div class="quick-action-text">
                  <div class="quick-action-title">Open Story Map</div>
                  <div class="quick-action-description">Visualize your product journey</div>
                </div>
              </a>
              <a href="#" class="quick-action" onclick="alert('Create functionality coming soon!'); return false;">
                <svg class="quick-action-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                  <polyline points="14 2 14 8 20 8"></polyline>
                  <line x1="12" y1="18" x2="12" y2="12"></line>
                  <line x1="9" y1="15" x2="15" y2="15"></line>
                </svg>
                <div class="quick-action-text">
                  <div class="quick-action-title">Create Story</div>
                  <div class="quick-action-description">Add a new user story</div>
                </div>
              </a>
              <a href="#" class="quick-action" onclick="alert('Create functionality coming soon!'); return false;">
                <svg class="quick-action-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                  <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                  <polyline points="2 17 12 22 22 17"></polyline>
                  <polyline points="2 12 12 17 22 12"></polyline>
                </svg>
                <div class="quick-action-text">
                  <div class="quick-action-title">Create Feature</div>
                  <div class="quick-action-description">Define a new feature</div>
                </div>
              </a>
            </div>
          </div>
        </div>

        <div class="section">
          <div class="section-header">
            <h2 class="section-title">Story Priorities</h2>
          </div>
          <div class="section-content">
            <div class="priority-breakdown">
              <div class="priority-item">
                <div class="priority-dot priority-must"></div>
                <div>
                  <div class="priority-count">{storiesByPriority.must || 0}</div>
                  <div class="priority-label">Must</div>
                </div>
              </div>
              <div class="priority-item">
                <div class="priority-dot priority-should"></div>
                <div>
                  <div class="priority-count">{storiesByPriority.should || 0}</div>
                  <div class="priority-label">Should</div>
                </div>
              </div>
              <div class="priority-item">
                <div class="priority-dot priority-could"></div>
                <div>
                  <div class="priority-count">{storiesByPriority.could || 0}</div>
                  <div class="priority-label">Could</div>
                </div>
              </div>
              <div class="priority-item">
                <div class="priority-dot priority-wont"></div>
                <div>
                  <div class="priority-count">{storiesByPriority.wont || 0}</div>
                  <div class="priority-label">Won't</div>
                </div>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</AppLayout>