---
import "../styles/global.css";
import { CommandPaletteWrapper } from "./CommandPaletteWrapper";

export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="en" class="dark">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <style>
      :root {
        --sidebar-width: 240px;
        --header-height: 48px;
      }

      body {
        font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto, "Helvetica Neue", Arial, sans-serif;
        background-color: #0a0a0a;
        color: #e1e1e3;
        margin: 0;
        padding: 0;
        overflow: hidden;
      }

      .app-container {
        display: flex;
        height: 100vh;
        width: 100vw;
      }

      .sidebar {
        width: var(--sidebar-width);
        background-color: #0e0e10;
        border-right: 1px solid #1f1f23;
        display: flex;
        flex-direction: column;
        transition: transform 0.2s ease;
        animation: slideInFromLeft 0.3s ease-out;
      }

      .sidebar-header {
        height: var(--header-height);
        padding: 0 16px;
        display: flex;
        align-items: center;
        border-bottom: 1px solid #1f1f23;
      }

      .logo {
        display: flex;
        align-items: center;
        gap: 8px;
        font-weight: 600;
        font-size: 15px;
        color: #fff;
      }

      .logo svg {
        width: 24px;
        height: 24px;
      }

      .sidebar-content {
        flex: 1;
        overflow-y: auto;
        padding: 12px 0;
      }

      .nav-section {
        margin-bottom: 24px;
      }

      .nav-section-title {
        font-size: 11px;
        font-weight: 600;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: #8b8b8d;
        padding: 0 16px 8px;
      }

      .nav-item {
        display: flex;
        align-items: center;
        gap: 10px;
        padding: 6px 16px;
        font-size: 14px;
        color: #a8a8a9;
        text-decoration: none;
        transition: all 0.1s ease;
        position: relative;
      }

      .nav-item:hover {
        color: #fff;
        background-color: #1a1a1d;
      }

      .nav-item.active {
        color: #fff;
        background-color: #1a1a1d;
      }

      .nav-item.active::before {
        content: "";
        position: absolute;
        left: 0;
        top: 50%;
        transform: translateY(-50%);
        width: 3px;
        height: 16px;
        background-color: #5e6ad2;
        border-radius: 0 2px 2px 0;
      }

      .nav-item svg {
        width: 16px;
        height: 16px;
        flex-shrink: 0;
      }

      .nav-item-label {
        flex: 1;
      }

      .nav-item-shortcut {
        font-size: 11px;
        color: #6b6b6d;
        margin-left: auto;
      }

      .main-container {
        flex: 1;
        display: flex;
        flex-direction: column;
        overflow: hidden;
      }

      .header {
        height: var(--header-height);
        background-color: #0e0e10;
        border-bottom: 1px solid #1f1f23;
        display: flex;
        align-items: center;
        padding: 0 20px;
        gap: 16px;
      }

      .search-box {
        flex: 1;
        max-width: 480px;
        position: relative;
      }

      .search-input {
        width: 100%;
        height: 32px;
        background-color: #1a1a1d;
        border: 1px solid #2a2a2d;
        border-radius: 6px;
        padding: 0 12px 0 32px;
        font-size: 14px;
        color: #e1e1e3;
        transition: all 0.2s ease;
      }

      .search-input:focus {
        outline: none;
        border-color: #5e6ad2;
        background-color: #1f1f23;
      }

      .search-icon {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        width: 14px;
        height: 14px;
        color: #6b6b6d;
        pointer-events: none;
      }

      .header-actions {
        display: flex;
        align-items: center;
        gap: 8px;
      }

      .header-button {
        width: 32px;
        height: 32px;
        border-radius: 6px;
        border: none;
        background-color: transparent;
        color: #a8a8a9;
        display: flex;
        align-items: center;
        justify-content: center;
        cursor: pointer;
        transition: all 0.1s ease;
      }

      .header-button:hover {
        background-color: #1a1a1d;
        color: #fff;
      }

      .header-button svg {
        width: 16px;
        height: 16px;
      }

      .content {
        flex: 1;
        overflow-y: auto;
        background-color: #0a0a0a;
      }

      .content-inner {
        max-width: 1200px;
        margin: 0 auto;
        padding: 32px;
        animation: fadeIn 0.4s ease-out;
      }

      /* Scrollbar styles */
      ::-webkit-scrollbar {
        width: 8px;
        height: 8px;
      }

      ::-webkit-scrollbar-track {
        background: transparent;
      }

      ::-webkit-scrollbar-thumb {
        background: #2a2a2d;
        border-radius: 4px;
      }

      ::-webkit-scrollbar-thumb:hover {
        background: #3a3a3d;
      }
    </style>
  </head>
  <body>
    <div class="app-container">
      <!-- Sidebar -->
      <nav class="sidebar">
        <div class="sidebar-header">
          <a href="/" class="logo">
            <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <path d="M3 9l9-7 9 7v11a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2z"></path>
              <polyline points="9 22 9 12 15 12 15 22"></polyline>
            </svg>
            ForgePoint
          </a>
        </div>
        <div class="sidebar-content">
          <div class="nav-section">
            <div class="nav-section-title">Product</div>
            <a href="/story-map" class="nav-item" data-route="/story-map">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <rect x="3" y="3" width="18" height="18" rx="2" ry="2"></rect>
                <line x1="3" y1="9" x2="21" y2="9"></line>
                <line x1="9" y1="21" x2="9" y2="9"></line>
              </svg>
              <span class="nav-item-label">Story Map</span>
              <span class="nav-item-shortcut">⌘1</span>
            </a>
            <a href="/stories" class="nav-item" data-route="/stories">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M14 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V8z"></path>
                <polyline points="14 2 14 8 20 8"></polyline>
                <line x1="16" y1="13" x2="8" y2="13"></line>
                <line x1="16" y1="17" x2="8" y2="17"></line>
                <polyline points="10 9 9 9 8 9"></polyline>
              </svg>
              <span class="nav-item-label">Stories</span>
              <span class="nav-item-shortcut">⌘2</span>
            </a>
            <a href="/features" class="nav-item" data-route="/features">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polygon points="12 2 2 7 12 12 22 7 12 2"></polygon>
                <polyline points="2 17 12 22 22 17"></polyline>
                <polyline points="2 12 12 17 22 12"></polyline>
              </svg>
              <span class="nav-item-label">Features</span>
              <span class="nav-item-shortcut">⌘3</span>
            </a>
            <a href="/activities" class="nav-item" data-route="/activities">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <polyline points="22 12 18 12 15 21 9 3 6 12 2 12"></polyline>
              </svg>
              <span class="nav-item-label">Activities</span>
              <span class="nav-item-shortcut">⌘4</span>
            </a>
          </div>
          <div class="nav-section">
            <div class="nav-section-title">Research</div>
            <a href="/personas" class="nav-item" data-route="/personas">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M20 21v-2a4 4 0 0 0-4-4H8a4 4 0 0 0-4 4v2"></path>
                <circle cx="12" cy="7" r="4"></circle>
              </svg>
              <span class="nav-item-label">Personas</span>
              <span class="nav-item-shortcut">⌘5</span>
            </a>
          </div>
          <div class="nav-section">
            <div class="nav-section-title">Planning</div>
            <a href="/prds" class="nav-item" data-route="/prds">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M13 2H6a2 2 0 0 0-2 2v16a2 2 0 0 0 2 2h12a2 2 0 0 0 2-2V9z"></path>
                <polyline points="13 2 13 9 20 9"></polyline>
              </svg>
              <span class="nav-item-label">PRDs</span>
              <span class="nav-item-shortcut">⌘6</span>
            </a>
            <a href="/adrs" class="nav-item" data-route="/adrs">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="10"></circle>
                <polyline points="12 6 12 12 16 14"></polyline>
              </svg>
              <span class="nav-item-label">ADRs</span>
              <span class="nav-item-shortcut">⌘7</span>
            </a>
          </div>
        </div>
      </nav>

      <!-- Main Content Area -->
      <div class="main-container">
        <!-- Header -->
        <header class="header">
          <div class="search-box">
            <svg class="search-icon" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
              <circle cx="11" cy="11" r="8"></circle>
              <path d="m21 21-4.35-4.35"></path>
            </svg>
            <input type="text" class="search-input" placeholder="Search or press ⌘K" readonly style="cursor: pointer;" />
          </div>
          <div class="header-actions">
            <button class="header-button" title="Create new (⌘N)">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <line x1="12" y1="5" x2="12" y2="19"></line>
                <line x1="5" y1="12" x2="19" y2="12"></line>
              </svg>
            </button>
            <button class="header-button" title="Notifications">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <path d="M18 8A6 6 0 0 0 6 8c0 7-3 9-3 9h18s-3-2-3-9"></path>
                <path d="M13.73 21a2 2 0 0 1-3.46 0"></path>
              </svg>
            </button>
            <button class="header-button" title="Settings">
              <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                <circle cx="12" cy="12" r="3"></circle>
                <path d="M12 1v6m0 6v6m11-11h-6m-6 0H1"></path>
              </svg>
            </button>
          </div>
        </header>

        <!-- Page Content -->
        <main class="content">
          <div class="content-inner">
            <slot />
          </div>
        </main>
      </div>
    </div>

    <!-- Command Palette React Component -->
    <CommandPaletteWrapper client:load />

    <script>
      // Highlight active nav item
      const currentPath = window.location.pathname;
      const navItems = document.querySelectorAll('.nav-item');
      navItems.forEach(item => {
        const route = item.getAttribute('data-route');
        if (currentPath.startsWith(route)) {
          item.classList.add('active');
        }
      });

      // Command palette state
      let isCommandPaletteOpen = false;

      // Function to toggle command palette
      const toggleCommandPalette = () => {
        isCommandPaletteOpen = !isCommandPaletteOpen;
        const event = new CustomEvent('toggle-command-palette', { detail: isCommandPaletteOpen });
        window.dispatchEvent(event);
      };

      // Search input click handler
      document.querySelector('.search-input')?.addEventListener('click', (e) => {
        e.preventDefault();
        toggleCommandPalette();
      });

      // Keyboard navigation
      document.addEventListener('keydown', (e) => {
        // Command palette
        if ((e.metaKey || e.ctrlKey) && e.key === 'k') {
          e.preventDefault();
          toggleCommandPalette();
        }

        // Quick navigation
        if (e.metaKey || e.ctrlKey) {
          const shortcuts = {
            '1': '/story-map',
            '2': '/stories',
            '3': '/features',
            '4': '/activities',
            '5': '/personas',
            '6': '/prds',
            '7': '/adrs',
            'n': () => {
              // TODO: Open create modal
              console.log('Create new item');
            }
          };

          if (shortcuts[e.key]) {
            e.preventDefault();
            if (typeof shortcuts[e.key] === 'string') {
              window.location.href = shortcuts[e.key];
            } else {
              shortcuts[e.key]();
            }
          }
        }
      });
    </script>
  </body>
</html>