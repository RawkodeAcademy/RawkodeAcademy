{
  "name": "transcription-terms",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "cd read-model && wrangler dev --local --persist-to=../.wrangler",
    "deploy": "cd read-model && wrangler deploy",
    "db:create": "wrangler d1 create platform-transcription-terms",
    "db:migrate:local": "wrangler d1 migrations apply platform-transcription-terms --local",
    "db:migrate:remote": "wrangler d1 migrations apply platform-transcription-terms --remote",
    "schema:publish": "deno run --allow-all read-model/publish.ts"
  },
  "dependencies": {
    "@apollo/subgraph": "^2.11.0",
    "@graphql-tools/utils": "^10.8.6",
    "@pothos/core": "^4.6.2",
    "@pothos/plugin-directives": "^4.2.1",
    "@pothos/plugin-drizzle": "^0.8.1",
    "@pothos/plugin-federation": "^4.3.3",
    "@sindresorhus/slugify": "^2.2.1",
    "drizzle-kit": "^0.30.6",
    "drizzle-orm": "^0.36.4",
    "drizzle-zod": "^0.7.1",
    "graphql": "^16.11.0",
    "graphql-yoga": "^5.13.5",
    "zod": "^3.25.64"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@cloudflare/workers-types": "^4.20250614.0",
    "@types/bun": "latest",
    "@types/node": "^22.14.1",
    "wrangler": "^4.13.2"
  }
}