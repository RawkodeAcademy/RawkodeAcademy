# Zitadel Auth
ZITADEL_CLIENT_ID="your-client-id"
ZITADEL_URL="https://your-zitadel-instance.com"

# Database (for local development)
TURSO_URL="file:local.db"
TURSO_AUTH_TOKEN="token-value-does-not-matter"

# RealtimeKit API
REALTIMEKIT_ORGANIZATION_ID="your-org-id"
REALTIMEKIT_API_KEY="your-api-key"
REALTIMEKIT_API_URL="https://rtk.realtime.cloudflare.com/v2"
REALTIMEKIT_STREAM_URL="rtmps://live.cloudflare.com:443/live/"
REALTIMEKIT_ENABLE_RECORDING=true
REALTIMEKIT_ENABLE_LIVESTREAM=true
REALTIMEKIT_ENABLE_ANALYTICS=true

# Auth
AUTH_STATE_SECRET="your-secret-key"

# R2 (S3-compatible) for local recordings
R2_ACCOUNT_ID="your-cloudflare-account-id"
R2_BUCKET="your-r2-bucket-name"
R2_ACCESS_KEY_ID="your-r2-access-key-id"
R2_SECRET_ACCESS_KEY="your-r2-secret-key"
R2_PUBLIC_HOST="https://media.rawkode.studio" # optional CDN/worker host that serves objects

# Descript integration
DESCRIPT_PARTNER_DRIVE_ID="your-partner-drive-id"
DESCRIPT_API_TOKEN="your-descript-personal-token"
