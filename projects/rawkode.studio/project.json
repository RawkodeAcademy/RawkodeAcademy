{
  "name": "rawkode-studio",
  "$schema": "../../../node_modules/nx/schemas/project-schema.json",
  "root": "projects/rawkode.studio",
  "projectType": "application",
  "sourceRoot": "projects/rawkode.studio/src",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "options": {
        "command": "dagger call build --source .",
        "cwd": "projects/rawkode.studio"
      },
      "outputs": ["{projectRoot}/dist"]
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run astro:dev",
        "cwd": "projects/rawkode.studio"
      }
    },
    "format": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run astro:format",
        "cwd": "projects/rawkode.studio"
      }
    },
    "deploy": {
      "executor": "nx:run-commands",
      "options": {
        "command": "wrangler deploy",
        "cwd": "projects/rawkode.studio"
      },
      "dependsOn": ["build"],
      "outputs": ["{projectRoot}/dist"]
    },
    "shadcn:update": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bun run shadcn:update",
        "cwd": "projects/rawkode.studio"
      }
    },
    "db:migrate": {
      "executor": "nx:run-commands",
      "options": {
        "command": "bunx drizzle-kit migrate",
        "cwd": "projects/rawkode.studio"
      }
    }
  }
}
