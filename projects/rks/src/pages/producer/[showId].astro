---
import ProducerShell from '../../components/producer/ProducerShell.vue'
const { showId } = Astro.params
const workerUrl = import.meta.env.PUBLIC_RKS_WORKER_URL as string | undefined
export const prerender = false;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Producer — {showId}</title>
    <style>
      main { max-width: 1100px; margin: 1.5rem auto; font-family: system-ui, sans-serif; }
    </style>
  </head>
  <body>
    <main>
      <h1>Producer — {showId}</h1>
      <ProducerShell client:only="vue" showId={showId!} workerBase={workerUrl ?? null} />
    </main>
  </body>
  </html>
