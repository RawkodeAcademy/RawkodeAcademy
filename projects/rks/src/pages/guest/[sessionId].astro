---
import GreenRoom from '../../components/guest/GreenRoom.vue'
const { sessionId } = Astro.params
const workerUrl = import.meta.env.PUBLIC_RKS_WORKER_URL as string | undefined
export const prerender = false;
---
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>Green Room — {sessionId}</title>
    <style>
      main { max-width: 1100px; margin: 1.5rem auto; font-family: system-ui, sans-serif; }
    </style>
  </head>
  <body>
    <main>
      <h1>Green Room — {sessionId}</h1>
      <GreenRoom client:only="vue" sessionId={sessionId!} workerBase={workerUrl ?? null} />
    </main>
  </body>
  </html>

